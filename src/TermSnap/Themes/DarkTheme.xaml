<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors -->
    <Color x:Key="PrimaryColor">#90CAF9</Color>
    <Color x:Key="PrimaryLightColor">#1E3A5F</Color>
    <Color x:Key="PrimaryDarkColor">#1565C0</Color>
    <Color x:Key="AccentColor">#FF80AB</Color>
    
    <Color x:Key="BackgroundColor">#121212</Color>
    <Color x:Key="SurfaceColor">#1E1E1E</Color>
    <Color x:Key="CardColor">#2D2D2D</Color>
    
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#B0B0B0</Color>
    <Color x:Key="TextDisabledColor">#6E6E6E</Color>
    
    <Color x:Key="BorderColor">#424242</Color>
    <Color x:Key="DividerColor">#373737</Color>
    
    <Color x:Key="SuccessColor">#81C784</Color>
    <Color x:Key="WarningColor">#FFB74D</Color>
    <Color x:Key="ErrorColor">#E57373</Color>
    <Color x:Key="InfoColor">#64B5F6</Color>
    
    <!-- Terminal Colors (same for dark) -->
    <Color x:Key="TerminalBackgroundColor">#1A1A2E</Color>
    <Color x:Key="TerminalTextColor">#E0E0E0</Color>
    <Color x:Key="TerminalPromptColor">#00E676</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    
    <SolidColorBrush x:Key="TerminalBackgroundBrush" Color="{StaticResource TerminalBackgroundColor}"/>
    <SolidColorBrush x:Key="TerminalTextBrush" Color="{StaticResource TerminalTextColor}"/>
    <SolidColorBrush x:Key="TerminalPromptBrush" Color="{StaticResource TerminalPromptColor}"/>
    
    <!-- Message Type Colors (Dark variants) -->
    <SolidColorBrush x:Key="UserMessageBrush" Color="#1E3A5F"/>
    <SolidColorBrush x:Key="CommandMessageBrush" Color="#3D3D1A"/>
    <SolidColorBrush x:Key="SuccessMessageBrush" Color="#1B3D1B"/>
    <SolidColorBrush x:Key="ErrorMessageBrush" Color="#4A1F1F"/>
    <SolidColorBrush x:Key="InfoMessageBrush" Color="#1A3545"/>
    <SolidColorBrush x:Key="WarningMessageBrush" Color="#3D2E1A"/>
    
    <!-- Block UI Colors (Dark variants) -->
    <SolidColorBrush x:Key="BlockHeaderBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="BlockExplanationBrush" Color="#3D3A2A"/>
    <SolidColorBrush x:Key="BlockFooterBrush" Color="#252525"/>
    <SolidColorBrush x:Key="BlockErrorBrush" Color="#3D2525"/>
    <SolidColorBrush x:Key="CacheBadgeBrush" Color="#1B3D1B"/>
    
    <!-- Side Panel Colors -->
    <SolidColorBrush x:Key="SidePanelBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SidePanelHeaderBrush" Color="#263238"/>

    <!-- Themed TextBox Style -->
    <Style x:Key="ThemedTextBox" TargetType="TextBox">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="CaretBrush" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
    </Style>

    <!-- Themed PasswordBox Style -->
    <Style x:Key="ThemedPasswordBox" TargetType="PasswordBox">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="CaretBrush" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
    </Style>

    <!-- Themed ComboBox Style -->
    <Style x:Key="ThemedComboBox" TargetType="ComboBox">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
    </Style>

    <!-- Themed RadioButton Style -->
    <Style x:Key="ThemedRadioButton" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- Themed CheckBox Style -->
    <Style x:Key="ThemedCheckBox" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- Themed Label Style -->
    <Style x:Key="ThemedLabel" TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

</ResourceDictionary>
