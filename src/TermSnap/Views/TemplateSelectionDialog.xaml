<Window x:Class="TermSnap.Views.TemplateSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="템플릿 선택"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="빠른 추가 템플릿"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="자주 사용하는 Port Forwarding 설정을 선택하세요"
                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <!-- Template List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="TemplateList" Margin="0,0,0,16">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="0,0,0,8"
                                Background="Transparent"
                                MouseLeftButtonDown="Template_Click"
                                Cursor="Hand"
                                Tag="{Binding}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid Margin="16,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="{Binding Icon}"
                                                         Width="32"
                                                         Height="32"
                                                         Margin="0,0,16,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="Medium"
                                               FontSize="16"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding Description}"
                                               FontSize="13"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                </StackPanel>

                                <!-- Port Info -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock FontSize="12" Foreground="{DynamicResource MaterialDesignBodyLight}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="Local">
                                                        <Setter Property="Text">
                                                            <Setter.Value>
                                                                <MultiBinding StringFormat="{}:{0} → :{1}">
                                                                    <Binding Path="LocalPort"/>
                                                                    <Binding Path="RemotePort"/>
                                                                </MultiBinding>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="Dynamic">
                                                        <Setter Property="Text">
                                                            <Setter.Value>
                                                                <Binding Path="LocalPort" StringFormat="{}:{0} (SOCKS)"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="취소"
                    Click="CancelButton_Click"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Width="100"
                    Height="36"/>
        </StackPanel>
    </Grid>
</Window>
