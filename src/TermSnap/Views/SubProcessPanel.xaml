<UserControl x:Class="TermSnap.Views.SubProcessPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="600"
             Focusable="False"
             Background="{DynamicResource CardBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- 상태 색상 -->
        <Style x:Key="StatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBrush}"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ApplicationCog"
                                            Width="20" Height="20"
                                            Foreground="{DynamicResource PrimaryBrush}"
                                            VerticalAlignment="Center"
                                            Margin="0,0,8,0"/>
                    <TextBlock Text="{DynamicResource SubProcess.Title}"
                               FontWeight="SemiBold"
                               FontSize="13"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="ProcessCountText"
                               Text=" (0)"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="2"
                        x:Name="RefreshButton"
                        Click="Refresh_Click"
                        ToolTip="{DynamicResource Common.Refresh}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        Width="28" Height="28">
                    <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16"/>
                </Button>

                <Button Grid.Column="3"
                        x:Name="CloseButton"
                        Click="Close_Click"
                        ToolTip="{DynamicResource Common.Close}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        Width="28" Height="28">
                    <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                </Button>
            </Grid>
        </Border>

        <!-- 프로세스 목록 -->
        <Border Grid.Row="1" Padding="8">
            <Grid>
                <!-- 프로세스 없을 때 -->
                <TextBlock x:Name="EmptyMessage"
                           Text="{DynamicResource SubProcess.Empty}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Visible"/>

                <!-- 프로세스 목록 -->
                <ListView x:Name="ProcessListView"
                          Background="Transparent"
                          BorderThickness="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Visibility="Collapsed">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border Background="{DynamicResource SurfaceBrush}"
                                                CornerRadius="4"
                                                Padding="10,8">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 상태 표시등 -->
                                <Ellipse Grid.Column="0">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse" BasedOn="{StaticResource StatusIndicator}">
                                            <Setter Property="Fill" Value="{DynamicResource SuccessBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                                    <Setter Property="Fill" Value="{DynamicResource TextSecondaryBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>

                                <!-- 프로세스 이름 및 명령어 -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ProcessName}"
                                               FontWeight="SemiBold"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding CommandLine}"
                                               FontSize="10"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="250"/>
                                </StackPanel>

                                <!-- PID -->
                                <TextBlock Grid.Column="2"
                                           VerticalAlignment="Center"
                                           Margin="8,0">
                                    <Run Text="PID: " Foreground="{DynamicResource TextSecondaryBrush}" FontSize="10"/>
                                    <Run Text="{Binding ProcessId}" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="11"/>
                                </TextBlock>

                                <!-- 메모리 -->
                                <TextBlock Grid.Column="3"
                                           Text="{Binding MemoryUsageFormatted}"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0"
                                           MinWidth="50"/>

                                <!-- 실행 시간 -->
                                <TextBlock Grid.Column="4"
                                           Text="{Binding RunningTimeFormatted}"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="8,0"
                                           MinWidth="40"/>

                                <!-- 버튼들 -->
                                <StackPanel Grid.Column="5"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <!-- 로그 보기 -->
                                    <Button Click="ViewLog_Click"
                                            ToolTip="{DynamicResource SubProcess.ViewLog}"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            Width="28" Height="28"
                                            Tag="{Binding}">
                                        <materialDesign:PackIcon Kind="TextBoxOutline" Width="14" Height="14"/>
                                    </Button>

                                    <!-- 종료/삭제 -->
                                    <Button Click="KillOrRemove_Click"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            Width="28" Height="28"
                                            Tag="{Binding}">
                                        <Button.ToolTip>
                                            <MultiBinding StringFormat="{}{0}">
                                                <Binding Source="{StaticResource ResourceKey=SubProcess.Kill}"/>
                                            </MultiBinding>
                                        </Button.ToolTip>
                                        <materialDesign:PackIcon Width="14" Height="14">
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Setter Property="Kind" Value="Stop"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                                            <Setter Property="Kind" Value="Delete"/>
                                                            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>
