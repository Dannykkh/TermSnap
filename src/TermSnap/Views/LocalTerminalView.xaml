<UserControl x:Class="TermSnap.Views.LocalTerminalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:TermSnap.Views"
             xmlns:models="clr-namespace:TermSnap.Models"
             xmlns:terminal="clr-namespace:TermSnap.Controls.Terminal">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="CommandBlockTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
            
            <!-- 메시지 템플릿 -->
            <DataTemplate x:Key="MessageTemplate">
                <Border>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsUser}" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="50,5,10,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Command">
                                    <Setter Property="Background" Value="#FFF9C4"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Success">
                                    <Setter Property="Background" Value="#C8E6C9"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Error">
                                    <Setter Property="Background" Value="#FFCDD2"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Normal">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Info">
                                    <Setter Property="Background" Value="#E1F5FE"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Warning">
                                    <Setter Property="Background" Value="#FFF3E0"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="CornerRadius" Value="10"/>
                            <Setter Property="Padding" Value="12"/>
                            <Setter Property="Background" Value="#F5F5F5"/>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <TextBlock Text="{Binding Content}"
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas"
                                   FontSize="13"
                                   LineHeight="18"
                                   BaselineOffset="0"/>
                        <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm:ss'}"
                                   FontSize="10"
                                   Foreground="Gray"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition x:Name="FileViewerSplitterColumn" Width="Auto"/>
            <ColumnDefinition x:Name="FileViewerColumn" Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- 출력 영역 (웰컴 화면 또는 터미널/블록 보기) -->
        <Grid Grid.Row="0" Grid.Column="0">
            <!-- 웰컴 화면 (폴더 미선택 시) -->
            <local:WelcomePanel x:Name="WelcomePanelControl"
                                Visibility="{Binding ShowWelcome, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- 인터랙티브 모드: VT100 터미널 컨트롤 -->
            <Border Background="#1E1E1E"
                    BorderBrush="#3E3E3E"
                    BorderThickness="1"
                    Margin="4"
                    CornerRadius="4"
                    Visibility="{Binding IsInteractiveMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <terminal:TerminalControl x:Name="TerminalCtrl"
                                          FontFamily="Consolas"
                                          FontSize="14"
                                          Margin="2"/>
            </Border>


            <!-- 블록 보기 - 채팅 UI 스타일 (UseBlockUI=True, 비인터랙티브) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Padding="10"
                          Name="BlockScrollViewer"
                          Focusable="True"
                          PreviewKeyDown="OutputArea_PreviewKeyDown">
                <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding ShowWelcome}" Value="False"/>
                                    <Condition Binding="{Binding UseBlockUI}" Value="True"/>
                                    <Condition Binding="{Binding IsInteractiveMode}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </ScrollViewer.Style>
                <ItemsControl ItemsSource="{Binding CommandBlocks}"
                              ItemTemplate="{StaticResource ChatBlockTemplate}"/>
            </ScrollViewer>

            <!-- 터미널 보기 - 카드 블록 스타일 (UseBlockUI=False, 비인터랙티브) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Padding="10"
                          Name="TerminalScrollViewer"
                          Focusable="True"
                          PreviewKeyDown="OutputArea_PreviewKeyDown">
                <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding ShowWelcome}" Value="False"/>
                                    <Condition Binding="{Binding UseBlockUI}" Value="False"/>
                                    <Condition Binding="{Binding IsInteractiveMode}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </ScrollViewer.Style>
                <ItemsControl ItemsSource="{Binding CommandBlocks}"
                              ItemTemplate="{StaticResource TerminalBlockTemplate}"/>
            </ScrollViewer>
        </Grid>

        <!-- 파일 뷰어 GridSplitter -->
        <GridSplitter x:Name="FileViewerSplitter"
                      Grid.Row="0" Grid.Column="1"
                      Width="6"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="Transparent"
                      Cursor="SizeWE"
                      ShowsPreview="True"
                      Visibility="{Binding IsFileViewerVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <GridSplitter.Style>
                <Style TargetType="GridSplitter">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </GridSplitter.Style>
        </GridSplitter>

        <!-- 파일 뷰어 패널 (우측) -->
        <local:FileViewerPanel x:Name="FileViewerPanelControl"
                               Grid.Row="0" Grid.Column="2"
                               Width="400"
                               MinWidth="200"
                               MaxWidth="800"
                               Visibility="{Binding IsFileViewerVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>


        <!-- 입력 영역 -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                Margin="10"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="#3E3E3E"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="IsEnabled" Value="True"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsConnected}" Value="False">
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 상단: 현재 경로 + 인터랙티브 정보 -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 현재 경로 표시 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FolderOutline"
                                                 Width="16" Height="16"
                                                 Foreground="{DynamicResource PrimaryBrush}"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource LocalTerminal.CurrentPath}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="6,0,8,0"/>
                        <TextBlock Text="{Binding CurrentDirectory}"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryBrush}"
                                   VerticalAlignment="Center"/>

                        <!-- Git 브랜치 -->
                        <Border Margin="12,0,0,0" Padding="6,2" Background="#33FF9800" CornerRadius="3">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding GitBranch}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding GitBranch}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="SourceBranch"
                                                         Width="14" Height="14"
                                                         Foreground="{DynamicResource WarningBrush}"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding GitBranch}"
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource WarningBrush}"
                                           VerticalAlignment="Center"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- 인터랙티브 모드 정보 및 액션 버튼 (우측) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <!-- 한영 전환 버튼 (인터랙티브 모드에서만 표시) -->
                        <Button x:Name="ImeToggleButton"
                                Width="28"
                                Height="24"
                                Margin="0,0,8,0"
                                Content="한"
                                Click="ImeToggleButton_Click"
                                ToolTip="한영 전환 (클릭)"
                                Padding="2"
                                Background="#2E2E2E"
                                Foreground="#999999"
                                BorderBrush="#444444"
                                BorderThickness="1">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="3"
                                                        Padding="{TemplateBinding Padding}">
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                               Foreground="{TemplateBinding Foreground}"
                                                               FontSize="{TemplateBinding FontSize}"
                                                               FontWeight="{TemplateBinding FontWeight}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3A3A3A"/>
                                            <Setter Property="BorderBrush" Value="#555555"/>
                                            <Setter Property="Foreground" Value="#BBBBBB"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- 인터랙티브 모드 정보 (우측 끝) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="40,0,0,0">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <Border Background="#0D47A1" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Console"
                                                         Width="14" Height="14"
                                                         Foreground="{DynamicResource PrimaryBrush}"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding AICLIProgramName}"
                                           FontSize="11"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text=" | "
                                           FontSize="11"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="2,0"/>
                                <materialDesign:PackIcon Kind="TimerOutline"
                                                         Width="12" Height="12"
                                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding AICLIElapsedTime}"
                                           FontSize="11"
                                           FontFamily="Consolas"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Button Content="{DynamicResource LocalTerminal.Exit}"
                                Click="ExitInteractiveMode_Click"
                                Background="#F44336"
                                Foreground="White"
                                Padding="8,4"
                                BorderThickness="0"
                                Height="26"/>
                    </StackPanel>
                </Grid>

                <!-- 하단: 입력창 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 일반 모드 입력창 -->
                    <TextBox Grid.Column="0"
                             x:Name="InputTextBox"
                             Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14"
                             FontFamily="Consolas"
                             Padding="10"
                             VerticalContentAlignment="Center"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             Background="{DynamicResource CardBrush}"
                             BorderBrush="#3E3E3E"
                             CaretBrush="{DynamicResource TextPrimaryBrush}"
                             BorderThickness="1"
                             PreviewKeyDown="InputTextBox_PreviewKeyDown"
                             TextChanged="InputTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SendMessageCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- 인터랙티브 모드 입력창 -->
                    <TextBox Grid.Column="0"
                             x:Name="InteractiveInputTextBox"
                             FontSize="13"
                             FontFamily="Consolas"
                             Padding="10"
                             MinHeight="60"
                             MaxHeight="120"
                             VerticalContentAlignment="Top"
                             VerticalScrollBarVisibility="Auto"
                             Background="#0D47A1"
                             Foreground="White"
                             CaretBrush="White"
                             SelectionBrush="#80FFFFFF"
                             SelectionOpacity="0.3"
                             BorderBrush="#1976D2"
                             BorderThickness="1"
                             AcceptsReturn="False"
                             TextWrapping="Wrap"
                             PreviewKeyDown="InteractiveInputTextBox_PreviewKeyDown"
                             TextChanged="InteractiveInputTextBox_TextChanged"
                             GotFocus="InteractiveInputTextBox_GotFocus"
                             materialDesign:HintAssist.Hint="{DynamicResource LocalTerminal.AuxiliaryInputHint}"
                             materialDesign:HintAssist.Foreground="{DynamicResource TextSecondaryBrush}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                              Focusable="false"
                                                              HorizontalScrollBarVisibility="Hidden"
                                                              VerticalScrollBarVisibility="Auto"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- 실행 버튼 (일반 모드) -->
                    <Button Grid.Column="1"
                            Margin="10,0,0,0"
                            Width="100"
                            Height="46"
                            Padding="10,5"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Content="{DynamicResource LocalTerminal.Execute}"
                            Command="{Binding SendMessageCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- 전송 버튼 (인터랙티브 모드) -->
                    <Button Grid.Column="1"
                            Margin="10,0,0,0"
                            Width="100"
                            Height="60"
                            VerticalAlignment="Stretch"
                            Padding="10,5"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            Content="{DynamicResource LocalTerminal.Send}"
                            Click="SendInteractiveInput_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
