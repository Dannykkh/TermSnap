<UserControl x:Class="TermSnap.Views.LocalTerminalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:TermSnap.Views"
             xmlns:models="clr-namespace:TermSnap.Models"
             xmlns:terminal="clr-namespace:TermSnap.Controls.Terminal">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="CommandBlockTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
            
            <!-- 메시지 템플릿 -->
            <DataTemplate x:Key="MessageTemplate">
                <Border>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsUser}" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="50,5,10,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Command">
                                    <Setter Property="Background" Value="#FFF9C4"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Success">
                                    <Setter Property="Background" Value="#C8E6C9"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Error">
                                    <Setter Property="Background" Value="#FFCDD2"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Normal">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Info">
                                    <Setter Property="Background" Value="#E1F5FE"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Warning">
                                    <Setter Property="Background" Value="#FFF3E0"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="CornerRadius" Value="10"/>
                            <Setter Property="Padding" Value="12"/>
                            <Setter Property="Background" Value="#F5F5F5"/>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <TextBlock Text="{Binding Content}"
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas"
                                   FontSize="13"
                                   LineHeight="18"
                                   BaselineOffset="0"/>
                        <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm:ss'}"
                                   FontSize="10"
                                   Foreground="Gray"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 출력 영역 (웰컴 화면 또는 터미널/블록 보기) -->
        <Grid Grid.Row="0" Grid.Column="0">
            <!-- 웰컴 화면 (폴더 미선택 시) -->
            <local:WelcomePanel x:Name="WelcomePanelControl"
                                Visibility="{Binding ShowWelcome, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- 인터랙티브 모드: VT100 터미널 컨트롤 + 스크롤바 -->
            <Border Background="#1E1E1E"
                    BorderBrush="#3E3E3E"
                    BorderThickness="1"
                    Margin="4"
                    CornerRadius="4"
                    Visibility="{Binding IsInteractiveMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <terminal:TerminalControl x:Name="TerminalCtrl"
                                              Grid.Column="0"
                                              FontFamily="Consolas"
                                              FontSize="14"
                                              Margin="2"
                                              AllowDrop="True"
                                              DragEnter="TerminalCtrl_DragEnter"
                                              DragOver="TerminalCtrl_DragOver"
                                              Drop="TerminalCtrl_Drop"/>

                    <!-- 터미널 스크롤바 -->
                    <ScrollBar x:Name="TerminalScrollBar"
                               Grid.Column="1"
                               Orientation="Vertical"
                               Width="12"
                               Margin="0,2,2,2"
                               Minimum="0"
                               SmallChange="1"
                               LargeChange="10"
                               ValueChanged="TerminalScrollBar_ValueChanged"/>
                </Grid>
            </Border>


            <!-- 블록 보기 - 채팅 UI 스타일 (UseBlockUI=True, 비인터랙티브) -->
            <ListBox ItemsSource="{Binding CommandBlocks}"
                     ItemTemplate="{StaticResource ChatBlockTemplate}"
                     Name="BlockScrollViewer"
                     Focusable="True"
                     PreviewKeyDown="OutputArea_PreviewKeyDown"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.CanContentScroll="True"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     VirtualizingPanel.ScrollUnit="Pixel"
                     BorderThickness="0"
                     Background="Transparent"
                     Padding="10"
                     HorizontalContentAlignment="Stretch">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.Style>
                    <Style TargetType="ListBox">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding ShowWelcome}" Value="False"/>
                                    <Condition Binding="{Binding UseBlockUI}" Value="True"/>
                                    <Condition Binding="{Binding IsInteractiveMode}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.Style>
            </ListBox>

            <!-- 터미널 보기 - 카드 블록 스타일 (UseBlockUI=False, 비인터랙티브) -->
            <ListBox ItemsSource="{Binding CommandBlocks}"
                     ItemTemplate="{StaticResource TerminalBlockTemplate}"
                     Name="TerminalScrollViewer"
                     Focusable="True"
                     PreviewKeyDown="OutputArea_PreviewKeyDown"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.CanContentScroll="True"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     VirtualizingPanel.ScrollUnit="Pixel"
                     BorderThickness="0"
                     Background="Transparent"
                     Padding="10"
                     HorizontalContentAlignment="Stretch">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.Style>
                    <Style TargetType="ListBox">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding ShowWelcome}" Value="False"/>
                                    <Condition Binding="{Binding UseBlockUI}" Value="False"/>
                                    <Condition Binding="{Binding IsInteractiveMode}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.Style>
            </ListBox>
        </Grid>

        <!-- 파일 뷰어 패널 (오버레이, 우측) -->
        <Border x:Name="FileViewerBorder"
                Grid.Row="0" Grid.Column="1"
                Panel.ZIndex="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Visibility="{Binding IsFileViewerVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="0"/>
            </Border.Effect>
            <local:FileViewerPanel x:Name="FileViewerPanelControl"
                                   x:FieldModifier="public"
                                   Width="450"
                                   MinWidth="300"
                                   MaxWidth="800"/>
        </Border>

        <!-- 서브 프로세스 패널 (오버레이, 하단) -->
        <Border x:Name="SubProcessBorder"
                Grid.Row="0"
                Panel.ZIndex="100"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Visibility="Collapsed"
                Margin="4">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="10" ShadowDepth="0"/>
            </Border.Effect>
            <local:SubProcessPanel x:Name="SubProcessPanelControl"
                                   Height="200"
                                   MaxHeight="300"/>
        </Border>

        <!-- Ralph Loop 패널 (오버레이, 우측) -->
        <Border x:Name="RalphLoopBorder"
                Grid.Row="0"
                Panel.ZIndex="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Visibility="Collapsed"
                Margin="4">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="10" ShadowDepth="0"/>
            </Border.Effect>
            <local:RalphLoopPanel x:Name="RalphLoopPanelControl"
                                  Width="380"/>
        </Border>

        <!-- GSD Workflow 패널 (오버레이, 우측) -->
        <Border x:Name="GsdWorkflowBorder"
                Grid.Row="0"
                Panel.ZIndex="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Visibility="Collapsed"
                Margin="4">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="10" ShadowDepth="0"/>
            </Border.Effect>
            <local:GsdWorkflowPanel x:Name="GsdWorkflowPanelControl"
                                    Width="450"/>
        </Border>

        <!-- AI 장기기억 패널 (오버레이, 우측) -->
        <Border x:Name="MemoryBorder"
                Grid.Row="0"
                Panel.ZIndex="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Visibility="Collapsed"
                Margin="4">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="10" ShadowDepth="0"/>
            </Border.Effect>
            <local:MemoryPanel x:Name="MemoryPanelControl"
                               Width="400"/>
        </Border>


        <!-- 입력 영역 -->
        <Border Grid.Row="2" Grid.Column="0"
                Margin="10"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="#3E3E3E"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="IsEnabled" Value="True"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsConnected}" Value="False">
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 상단: 현재 경로 + 인터랙티브 정보 -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 현재 경로 및 Git 브랜치 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <!-- AI 모델 아이콘 (인터랙티브 모드에서만 표시) -->
                        <Grid x:Name="AIModelIconGrid" Width="24" Height="24" Margin="0,0,8,0">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <!-- Claude 로고 (실제 이미지) -->
                            <Image x:Name="ClaudeIcon" Width="24" Height="24" Visibility="Collapsed"
                                   Source="/Resources/AILogos/claude-logo.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <!-- Gemini 로고 (실제 이미지) -->
                            <Image x:Name="GeminiIcon" Width="24" Height="24" Visibility="Collapsed"
                                   Source="/Resources/AILogos/gemini-logo.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <!-- OpenAI 로고 (실제 이미지) -->
                            <Image x:Name="OpenAIIcon" Width="24" Height="24" Visibility="Collapsed"
                                   Source="/Resources/AILogos/openai-logo.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <!-- Aider 아이콘 (Path 기반) -->
                            <Viewbox x:Name="AiderIcon" Width="24" Height="24" Visibility="Collapsed">
                                <Canvas Width="24" Height="24">
                                    <Ellipse Canvas.Left="2" Canvas.Top="2" Width="20" Height="20" Fill="#14B8A6"/>
                                    <Path Fill="White" Data="M8,8 L11,8 L11,12 L8,12 Z"/>
                                    <Path Fill="White" Data="M13,8 L16,8 L16,16 L13,16 Z"/>
                                    <Path Fill="White" Data="M8,14 L11,14 L11,16 L8,16 Z"/>
                                </Canvas>
                            </Viewbox>
                            <!-- 기본 터미널 아이콘 -->
                            <materialDesign:PackIcon x:Name="DefaultTerminalIcon" Kind="Console"
                                                     Width="24" Height="24" Foreground="#64B5F6" Visibility="Visible"/>
                        </Grid>

                        <!-- 현재 경로 -->
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Folder"
                                                     Width="14" Height="14"
                                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentDirectory}"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="6,0,0,0"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="300"/>
                        </StackPanel>

                        <!-- Git 브랜치 -->
                        <Border Margin="12,0,0,0" Padding="6,2" Background="#33FF9800" CornerRadius="3">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding GitBranch}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding GitBranch}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="SourceBranch"
                                                         Width="14" Height="14"
                                                         Foreground="{DynamicResource WarningBrush}"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding GitBranch}"
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource WarningBrush}"
                                           VerticalAlignment="Center"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- GSD 상태 표시 (비인터랙티브 모드) -->
                        <Border x:Name="GsdStatusBorder" Margin="12,0,0,0" Padding="6,2" Background="#33673AB7" CornerRadius="3" Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FormatListChecks"
                                                         Width="14" Height="14"
                                                         Foreground="#9C27B0"
                                                         VerticalAlignment="Center"/>
                                <TextBlock x:Name="GsdStatusText"
                                           Text="GSD"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#9C27B0"
                                           VerticalAlignment="Center"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- GSD 버튼들 (비인터랙티브 모드, 세션 연결 시) -->
                        <StackPanel Orientation="Horizontal" Margin="12,0,0,0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ShowWelcome}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <!-- GSD 초기화 버튼 -->
                            <Button x:Name="GsdInitButton"
                                    Click="GsdInit_Click"
                                    ToolTip="{DynamicResource Gsd.InitTooltip}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Width="26" Height="24"
                                    Margin="0,0,4,0">
                                <materialDesign:PackIcon Kind="FolderPlusOutline" Width="14" Height="14" Foreground="#9C27B0"/>
                            </Button>

                            <!-- Claude + GSD 실행 버튼 -->
                            <Button x:Name="RunClaudeGsdButton"
                                    Click="RunClaudeGsd_Click"
                                    ToolTip="{DynamicResource Gsd.RunClaudeWithGsd}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Width="26" Height="24"
                                    Margin="0,0,4,0">
                                <materialDesign:PackIcon Kind="RocketLaunchOutline" Width="14" Height="14" Foreground="#673AB7"/>
                            </Button>

                            <!-- .planning 폴더 열기 -->
                            <Button x:Name="OpenPlanningButton"
                                    Click="OpenPlanning_Click"
                                    ToolTip="{DynamicResource Gsd.OpenPlanning}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Width="26" Height="24"
                                    Visibility="Collapsed">
                                <materialDesign:PackIcon Kind="FolderOpenOutline" Width="14" Height="14" Foreground="#673AB7"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- 인터랙티브 모드 정보 및 액션 버튼 (우측) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <!-- 한영 전환 버튼 (인터랙티브 모드에서만 표시) -->
                        <Button x:Name="ImeToggleButton"
                                Width="28"
                                Height="24"
                                Margin="0,0,8,0"
                                Content="한"
                                Click="ImeToggleButton_Click"
                                ToolTip="한영 전환 (클릭)"
                                Padding="2"
                                Background="#2E2E2E"
                                Foreground="#999999"
                                BorderBrush="#444444"
                                BorderThickness="1">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="3"
                                                        Padding="{TemplateBinding Padding}">
                                                    <TextBlock Text="{TemplateBinding Content}"
                                                               Foreground="{TemplateBinding Foreground}"
                                                               FontSize="{TemplateBinding FontSize}"
                                                               FontWeight="{TemplateBinding FontWeight}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3A3A3A"/>
                                            <Setter Property="BorderBrush" Value="#555555"/>
                                            <Setter Property="Foreground" Value="#BBBBBB"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- 인터랙티브 모드 정보 (우측 끝) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="40,0,0,0">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <Border Background="#0D47A1" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Console"
                                                         Width="14" Height="14"
                                                         Foreground="{DynamicResource PrimaryBrush}"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding AICLIProgramName}"
                                           FontSize="11"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text=" | "
                                           FontSize="11"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="2,0"/>
                                <materialDesign:PackIcon Kind="TimerOutline"
                                                         Width="12" Height="12"
                                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding AICLIElapsedTime}"
                                           FontSize="11"
                                           FontFamily="Consolas"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- AI 장기기억 토글 버튼 -->
                        <Button x:Name="MemoryToggleButton"
                                Click="MemoryToggle_Click"
                                ToolTip="AI 장기기억"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Background="#7B1FA2"
                                Foreground="White"
                                Width="28" Height="26"
                                Margin="0,0,8,0">
                            <materialDesign:PackIcon Kind="Brain" Width="16" Height="16"/>
                        </Button>

                        <!-- Ralph Loop 토글 버튼 -->
                        <Button x:Name="RalphLoopToggleButton"
                                Click="RalphLoopToggle_Click"
                                ToolTip="Ralph Loop (자동 반복)"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Background="#FF6F00"
                                Foreground="White"
                                Width="28" Height="26"
                                Margin="0,0,8,0">
                            <materialDesign:PackIcon Kind="Repeat" Width="16" Height="16"/>
                        </Button>

                        <!-- GSD Workflow 토글 버튼 -->
                        <Button x:Name="GsdWorkflowToggleButton"
                                Click="GsdWorkflowToggle_Click"
                                ToolTip="{DynamicResource GsdWorkflow.Title}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Background="#673AB7"
                                Foreground="White"
                                Width="28" Height="26"
                                Margin="0,0,8,0">
                            <materialDesign:PackIcon Kind="FormatListChecks" Width="16" Height="16"/>
                        </Button>

                        <!-- 서브 프로세스 토글 버튼 -->
                        <Button x:Name="SubProcessToggleButton"
                                Click="SubProcessToggle_Click"
                                ToolTip="{DynamicResource SubProcess.PanelTooltip}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Background="#1B5E20"
                                Foreground="White"
                                Width="28" Height="26"
                                Margin="0,0,8,0">
                            <materialDesign:PackIcon Kind="ApplicationCog" Width="16" Height="16"/>
                        </Button>

                        <Button Content="{DynamicResource LocalTerminal.Exit}"
                                Click="ExitInteractiveMode_Click"
                                Background="#F44336"
                                Foreground="White"
                                Padding="8,4"
                                BorderThickness="0"
                                Height="26"/>
                    </StackPanel>
                </Grid>

                <!-- 하단: 입력창 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 일반 모드 입력창 -->
                    <TextBox Grid.Column="0"
                             x:Name="InputTextBox"
                             Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14"
                             FontFamily="Consolas"
                             Padding="10"
                             VerticalContentAlignment="Center"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             Background="{DynamicResource CardBrush}"
                             BorderBrush="#3E3E3E"
                             CaretBrush="{DynamicResource TextPrimaryBrush}"
                             BorderThickness="1"
                             AllowDrop="True"
                             DragEnter="InputTextBox_DragEnter"
                             DragOver="InputTextBox_DragOver"
                             Drop="InputTextBox_Drop"
                             PreviewKeyDown="InputTextBox_PreviewKeyDown"
                             TextChanged="InputTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SendMessageCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- 인터랙티브 모드 입력창 -->
                    <TextBox Grid.Column="0"
                             x:Name="InteractiveInputTextBox"
                             FontSize="13"
                             FontFamily="Consolas"
                             Padding="10"
                             MinHeight="60"
                             MaxHeight="120"
                             VerticalContentAlignment="Top"
                             VerticalScrollBarVisibility="Auto"
                             Background="#0D47A1"
                             Foreground="White"
                             CaretBrush="White"
                             SelectionBrush="#1565C0"
                             SelectionTextBrush="White"
                             BorderBrush="#1976D2"
                             BorderThickness="1"
                             AcceptsReturn="False"
                             TextWrapping="Wrap"
                             Loaded="InteractiveInputTextBox_Loaded"
                             PreviewKeyDown="InteractiveInputTextBox_PreviewKeyDown"
                             TextChanged="InteractiveInputTextBox_TextChanged"
                             GotFocus="InteractiveInputTextBox_GotFocus"
                             LostFocus="InteractiveInputTextBox_LostFocus"
                             materialDesign:HintAssist.Hint="{DynamicResource LocalTerminal.AuxiliaryInputHint}"
                             materialDesign:HintAssist.Foreground="{DynamicResource TextSecondaryBrush}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                              Focusable="false"
                                                              HorizontalScrollBarVisibility="Hidden"
                                                              VerticalScrollBarVisibility="Auto"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- 실행 버튼 (일반 모드) -->
                    <Button Grid.Column="1"
                            Margin="10,0,0,0"
                            Width="100"
                            Height="46"
                            Padding="10,5"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Content="{DynamicResource LocalTerminal.Execute}"
                            Command="{Binding SendMessageCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- 전송 버튼 (인터랙티브 모드) -->
                    <Button Grid.Column="1"
                            Margin="10,0,0,0"
                            Width="100"
                            Height="60"
                            VerticalAlignment="Stretch"
                            Padding="10,5"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            Content="{DynamicResource LocalTerminal.Send}"
                            Click="SendInteractiveInput_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
