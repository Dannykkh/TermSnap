<Window x:Class="TermSnap.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{DynamicResource Settings.Title}"
        Height="850" Width="550"
        MinHeight="700" MinWidth="450"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SurfaceBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- 라디오 버튼 스타일 -->
        <Style x:Key="ThemeRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- 제공자 선택 라디오 버튼 -->
        <Style x:Key="ProviderRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Ellipse x:Name="radioOuter" 
                                         Grid.Column="0"
                                         Width="18" Height="18"
                                         Stroke="{DynamicResource TextSecondaryBrush}"
                                         StrokeThickness="2"
                                         Fill="Transparent"
                                         VerticalAlignment="Center"/>
                                <Ellipse x:Name="radioInner"
                                         Grid.Column="0"
                                         Width="10" Height="10"
                                         Fill="{DynamicResource PrimaryBrush}"
                                         VerticalAlignment="Center"
                                         Visibility="Collapsed"/>
                                
                                <ContentPresenter Grid.Column="1" 
                                                  Margin="12,0,0,0"
                                                  VerticalAlignment="Center"/>
                                
                                <TextBlock x:Name="checkMark"
                                           Grid.Column="2"
                                           Text="&#x2713;"
                                           Foreground="{DynamicResource PrimaryBrush}"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter TargetName="radioOuter" Property="Stroke" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter TargetName="radioInner" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource PrimaryLightBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 섹션 Border 스타일 -->
        <Style x:Key="SectionBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0"
                   Text="{DynamicResource Settings.Title}"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,20"/>

        <!-- 설정 내용 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 테마 설정 -->
                <Border Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Settings.Theme}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,12"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="LightThemeRadio"
                                         Content="{DynamicResource Settings.Theme.Light}" 
                                         GroupName="Theme"
                                         Style="{StaticResource ThemeRadioButton}"
                                         Margin="0,0,24,0"
                                         Checked="Theme_Changed"/>
                            <RadioButton x:Name="DarkThemeRadio"
                                         Content="{DynamicResource Settings.Theme.Dark}" 
                                         GroupName="Theme"
                                         Style="{StaticResource ThemeRadioButton}"
                                         Checked="Theme_Changed"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 언어 설정 -->
                <Border Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Settings.Language}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,12"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="KoreanLanguageRadio"
                                         Content="{DynamicResource Settings.Language.Korean}"
                                         GroupName="Language"
                                         Style="{StaticResource ThemeRadioButton}"
                                         Margin="0,0,24,0"
                                         Checked="Language_Changed"/>
                            <RadioButton x:Name="EnglishLanguageRadio"
                                         Content="{DynamicResource Settings.Language.English}"
                                         GroupName="Language"
                                         Style="{StaticResource ThemeRadioButton}"
                                         Checked="Language_Changed"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 서버 프로필 관리 -->
                <Border Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{DynamicResource Settings.ServerProfiles}" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <TextBlock Text="{DynamicResource Settings.ServerProfiles.Description}" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <Button Grid.Column="1"
                                    Content="{DynamicResource Settings.ServerProfiles.AddNew}"
                                    Click="AddProfile_Click"
                                    Padding="12,8"
                                    Style="{StaticResource MaterialDesignRaisedButton}"/>
                        </Grid>
                        
                        <!-- 프로필 목록 -->
                        <Border BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                MaxHeight="200">
                            <ListBox x:Name="ProfileListBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     SelectionChanged="ProfileListBox_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="8,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <materialDesign:PackIcon Grid.Column="0"
                                                                    Kind="Server"
                                                                    Width="20" Height="20"
                                                                    VerticalAlignment="Center"
                                                                    Margin="0,0,10,0"
                                                                    Foreground="{DynamicResource PrimaryBrush}"/>
                                            
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding ProfileName}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                <TextBlock Foreground="{DynamicResource TextSecondaryBrush}"
                                                           FontSize="11">
                                                    <Run Text="{Binding Username}"/>
                                                    <Run Text="@"/>
                                                    <Run Text="{Binding Host}"/>
                                                    <Run Text=":"/>
                                                    <Run Text="{Binding Port}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <Button Grid.Column="2"
                                                    Content="{DynamicResource Common.Edit}"
                                                    Click="EditProfile_Click"
                                                    Padding="8,4"
                                                    Margin="8,0"
                                                    FontSize="11"
                                                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
                                            <Button Grid.Column="3"
                                                    Content="{DynamicResource Common.Delete}"
                                                    Click="DeleteProfile_Click"
                                                    Padding="8,4"
                                                    FontSize="11"
                                                    Foreground="{DynamicResource ErrorBrush}"
                                                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>
                        
                        <!-- 프로필이 없을 때 안내 -->
                        <TextBlock x:Name="NoProfileText"
                                   Text="{DynamicResource Settings.ServerProfiles.Empty}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   FontSize="12"
                                   TextAlignment="Center"
                                   Margin="0,12,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </Border>
                
                <!-- AI 제공자 선택 -->
                <Border Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Settings.AIProvider}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="{DynamicResource Settings.AIProvider.Description}" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,12"/>
                        
                        <RadioButton x:Name="NoneRadio"
                                     Content="{DynamicResource Settings.AIProvider.None}"
                                     GroupName="Provider"
                                     Style="{StaticResource ProviderRadioButton}"
                                     Tag="None"
                                     Checked="Provider_Changed"/>
                        <RadioButton x:Name="GeminiRadio"
                                     Content="Google Gemini"
                                     GroupName="Provider"
                                     Style="{StaticResource ProviderRadioButton}"
                                     Tag="Gemini"
                                     Checked="Provider_Changed"/>
                        <RadioButton x:Name="OpenAIRadio"
                                     Content="OpenAI (GPT)"
                                     GroupName="Provider"
                                     Style="{StaticResource ProviderRadioButton}"
                                     Tag="OpenAI"
                                     Checked="Provider_Changed"/>
                        <RadioButton x:Name="ClaudeRadio"
                                     Content="Anthropic Claude"
                                     GroupName="Provider"
                                     Style="{StaticResource ProviderRadioButton}"
                                     Tag="Claude"
                                     Checked="Provider_Changed"/>
                        <RadioButton x:Name="GrokRadio"
                                     Content="xAI Grok"
                                     GroupName="Provider"
                                     Style="{StaticResource ProviderRadioButton}"
                                     Tag="Grok"
                                     Checked="Provider_Changed"/>
                        <RadioButton x:Name="OllamaRadio"
                                     GroupName="Provider"
                                     Style="{StaticResource ProviderRadioButton}"
                                     Tag="Ollama"
                                     Checked="Provider_Changed">
                            <StackPanel>
                                <TextBlock Text="Ollama (Local)" FontWeight="SemiBold"/>
                                <TextBlock Text="{DynamicResource Settings.AIProvider.Ollama.Description}"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </Border>

                <!-- Ollama 설정 (Ollama 선택 시에만 표시) -->
                <Border x:Name="OllamaSection" Style="{StaticResource SectionBorder}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Settings.Ollama.Title}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,12"/>

                        <!-- Base URL -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="{DynamicResource Settings.Ollama.BaseUrl}"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="OllamaBaseUrlBox"
                                         Grid.Column="0"
                                         Text="http://localhost:11434"
                                         Style="{DynamicResource ThemedTextBox}"
                                         FontSize="13"/>
                                <Button Grid.Column="1"
                                        x:Name="OllamaTestButton"
                                        Content="{DynamicResource Settings.Ollama.TestConnection}"
                                        Click="OllamaTest_Click"
                                        Margin="12,0,0,0"
                                        Padding="12,8"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
                            </Grid>
                        </StackPanel>

                        <!-- 연결 상태 -->
                        <Border x:Name="OllamaStatusBorder"
                                Background="{DynamicResource SurfaceBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon x:Name="OllamaStatusIcon"
                                                        Kind="CircleOutline"
                                                        Width="20" Height="20"
                                                        Foreground="{DynamicResource TextSecondaryBrush}"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                                <TextBlock x:Name="OllamaStatusText"
                                           Text="{DynamicResource Settings.Ollama.Status.NotConnected}"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- 모델 선택 -->
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{DynamicResource Settings.Ollama.Model}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                                <Button Grid.Column="1"
                                        x:Name="OllamaRefreshButton"
                                        Click="OllamaRefresh_Click"
                                        Padding="8,4"
                                        ToolTip="{DynamicResource Settings.Ollama.RefreshModels}"
                                        Style="{StaticResource MaterialDesignIconButton}">
                                    <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"/>
                                </Button>
                            </Grid>
                            <ComboBox x:Name="OllamaModelComboBox"
                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                      Background="{DynamicResource CardBrush}"
                                      Padding="10,8"
                                      FontSize="13"
                                      DisplayMemberPath="Name"/>
                            <TextBlock x:Name="OllamaNoModelsText"
                                       Text="{DynamicResource Settings.Ollama.NoModels}"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="12"
                                       Margin="0,8,0,0"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- API 키 및 모델 선택 -->
                <Border x:Name="ApiKeySection" Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="ApiKeyLabel"
                                           Text="{DynamicResource Settings.APIKey}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,8"/>
                                <PasswordBox x:Name="ApiKeyBox"
                                             Style="{DynamicResource ThemedPasswordBox}"
                                             FontSize="13"/>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    x:Name="GetApiKeyButton"
                                    Content="{DynamicResource Settings.GetAPIKey}"
                                    Click="GetApiKey_Click"
                                    VerticalAlignment="Bottom"
                                    Margin="12,0,0,0"
                                    Padding="12,8"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
                        </Grid>

                        <StackPanel>
                            <TextBlock Text="{DynamicResource Settings.Model}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <ComboBox x:Name="ModelComboBox"
                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                      Background="{DynamicResource CardBrush}"
                                      Padding="10,8"
                                      FontSize="13"
                                      DisplayMemberPath="ModelDisplayName"
                                      SelectedValuePath="ModelId"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 임베딩 설정 (벡터 검색) -->
                <Border Style="{StaticResource SectionBorder}">
                    <StackPanel>
                        <!-- 임베딩 사용 체크박스 -->
                        <CheckBox x:Name="EmbeddingEnabledCheckBox"
                                  Margin="0,0,0,8"
                                  Checked="EmbeddingEnabled_Changed"
                                  Unchecked="EmbeddingEnabled_Changed">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource Settings.Embedding}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <TextBlock Text="{DynamicResource Settings.Embedding.Description}"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </CheckBox>

                        <!-- 임베딩 타입 선택 (체크 시에만 표시) -->
                        <StackPanel x:Name="EmbeddingTypePanel" Margin="24,8,0,0">
                            <RadioButton x:Name="EmbeddingLocalRadio"
                                         GroupName="EmbeddingType"
                                         Style="{StaticResource ProviderRadioButton}"
                                         Checked="EmbeddingType_Changed">
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource Settings.Embedding.Local}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{DynamicResource Settings.Embedding.Local.Description}"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </RadioButton>

                            <RadioButton x:Name="EmbeddingApiRadio"
                                         GroupName="EmbeddingType"
                                         Style="{StaticResource ProviderRadioButton}"
                                         Checked="EmbeddingType_Changed">
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource Settings.Embedding.API}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{DynamicResource Settings.Embedding.API.Description}"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </RadioButton>

                            <!-- 로컬 모델 상태 및 다운로드 -->
                            <Border x:Name="LocalModelPanel"
                                    Background="{DynamicResource SurfaceBrush}"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,12,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Column="0" Grid.Row="0">
                                        <TextBlock Text="{DynamicResource Settings.Embedding.Local.Status}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock x:Name="LocalModelStatusText"
                                                   Text="{DynamicResource Settings.Embedding.Local.Checking}"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <Button x:Name="DownloadModelButton"
                                            Grid.Column="1" Grid.Row="0"
                                            Content="{DynamicResource Settings.Embedding.Local.Download}"
                                            Click="DownloadModel_Click"
                                            Padding="12,8"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource MaterialDesignRaisedButton}"/>

                                    <!-- 다운로드 진행 상태 -->
                                    <StackPanel x:Name="DownloadProgressPanel"
                                                Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                                                Visibility="Collapsed"
                                                Margin="0,12,0,0">
                                        <TextBlock x:Name="DownloadStatusText"
                                                   Text="{DynamicResource Settings.Embedding.Local.Preparing}"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <ProgressBar x:Name="DownloadProgressBar"
                                                     Height="6"
                                                     Margin="0,8,0,0"
                                                     Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                                    </StackPanel>

                                    <!-- 모델 정보 -->
                                    <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
                                               Margin="0,12,0,0"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               TextWrapping="Wrap">
                                        <Run FontWeight="SemiBold" Text="{DynamicResource Settings.Embedding.Local.Model}"/>
                                        <Run Text="paraphrase-multilingual-MiniLM-L12-v2"/>
                                        <LineBreak/>
                                        <Run FontWeight="SemiBold" Text="{DynamicResource Settings.Embedding.Local.Size}"/>
                                        <Run Text="~470MB | "/>
                                        <Run FontWeight="SemiBold" Text="{DynamicResource Settings.Embedding.Local.Dimension}"/>
                                        <Run Text="384 | "/>
                                        <Run FontWeight="SemiBold" Text="{DynamicResource Settings.Embedding.Local.KoreanSupport}"/>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- 버튼 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,10">
            <Button Content="{DynamicResource Common.Save}"
                    Click="Save_Click"
                    Margin="0,0,12,0"
                    Padding="24,12"
                    Height="40"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button Content="{DynamicResource Common.Cancel}"
                    Click="Cancel_Click"
                    Padding="24,12"
                    Height="40"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>
    </Grid>
</Window>
