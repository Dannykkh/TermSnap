<Window x:Class="TermSnap.Views.WorkflowParameterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="워크플로우 파라미터 입력"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="500"
        SizeToContent="Height"
        ShowInTaskbar="False"
        Topmost="True"
        KeyDown="Window_KeyDown">

    <Border Background="White"
            BorderBrush="#673AB7"
            BorderThickness="2"
            CornerRadius="8"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 헤더 -->
            <Border Grid.Row="0" Background="#673AB7" CornerRadius="6,6,0,0" Padding="15,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Kind="Cog" 
                                             Width="24" Height="24"
                                             Foreground="White"
                                             VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="1"
                               Text="워크플로우 파라미터"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <Button Grid.Column="2"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            Click="CloseButton_Click"
                            Padding="4">
                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                    </Button>
                </Grid>
            </Border>

            <!-- 스니펫 정보 -->
            <Border Grid.Row="1" Background="#F5F5F5" Padding="15,10">
                <StackPanel>
                    <TextBlock x:Name="SnippetNameText"
                               Text="스니펫 이름"
                               FontWeight="Bold"
                               FontSize="14"/>
                    <TextBlock x:Name="SnippetCommandText"
                               Text="명령어"
                               FontFamily="Consolas"
                               FontSize="12"
                               Foreground="#1976D2"
                               TextWrapping="Wrap"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- 파라미터 입력 필드 -->
            <ScrollViewer Grid.Row="2" 
                          VerticalScrollBarVisibility="Auto"
                          MaxHeight="300"
                          Padding="15,10">
                <ItemsControl x:Name="ParametersItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="Medium"
                                               FontSize="13"/>
                                    <TextBlock Text=" (필수)"
                                               FontSize="11"
                                               Foreground="#F44336"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Description}"
                                           FontSize="11"
                                           Foreground="#757575"
                                           Margin="0,2,0,5"
                                           TextWrapping="Wrap"
                                           Visibility="{Binding Description, Converter={StaticResource StringToVisibilityConverter}}"/>
                                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="10,8"
                                         FontSize="13"
                                         materialDesign:HintAssist.Hint="{Binding DefaultValue}"
                                         BorderBrush="#E0E0E0"
                                         BorderThickness="1"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- 미리보기 -->
            <Border Grid.Row="3" Background="#263238" Padding="15,10">
                <StackPanel>
                    <TextBlock Text="최종 명령어 미리보기"
                               FontSize="11"
                               Foreground="#9E9E9E"
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="PreviewCommandText"
                               Text="$ command"
                               FontFamily="Consolas"
                               FontSize="13"
                               Foreground="#4CAF50"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- 버튼 -->
            <Border Grid.Row="3" 
                    Background="White"
                    Padding="15,10"
                    CornerRadius="0,0,6,6"
                    Visibility="Collapsed">
                <!-- 미리보기 아래로 이동 -->
            </Border>
        </Grid>
    </Border>
    
    <!-- 하단 버튼 영역 -->
    <Window.Resources>
        <Style TargetType="Button" x:Key="DialogButton">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>
</Window>
