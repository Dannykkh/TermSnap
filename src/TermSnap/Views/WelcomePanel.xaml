<UserControl x:Class="TermSnap.Views.WelcomePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <!-- 액션 버튼 스타일 -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 최근 폴더 아이템 스타일 -->
        <Style x:Key="RecentFolderItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="40,30" MaxWidth="600" HorizontalAlignment="Center">
                
                <!-- 로고 및 타이틀 -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,24">
                    <materialDesign:PackIcon Kind="Console"
                                             Width="64" Height="64"
                                             Foreground="{DynamicResource PrimaryBrush}"
                                             HorizontalAlignment="Center"/>
                    <TextBlock Text="TermSnap"
                               FontSize="28"
                               FontWeight="Light"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,4"/>
                    <TextBlock Text="터미널에 오신 것을 환영합니다"
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- 쉘 선택 섹션 -->
                <TextBlock Text="쉘 선택"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,0,0,10"/>

                <ItemsControl x:Name="ShellList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,8,8"
                                    Padding="12,8"
                                    Click="ShellItem_Click"
                                    Tag="{Binding}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="{Binding IconKind}"
                                                             Width="18" Height="18"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding DisplayName}"
                                               VerticalAlignment="Center"
                                               FontSize="13"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- 현재 선택된 쉘 표시 -->
                <Border x:Name="SelectedShellBorder"
                        Background="{DynamicResource CardBrush}"
                        BorderBrush="{DynamicResource PrimaryBrush}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="12,8"
                        Margin="0,0,0,20"
                        Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Check"
                                                 Width="18" Height="18"
                                                 Foreground="{DynamicResource PrimaryBrush}"
                                                 VerticalAlignment="Center"/>
                        <TextBlock x:Name="SelectedShellText"
                                   Margin="8,0,0,0"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- AI CLI 사용 여부 체크박스 -->
                <CheckBox x:Name="UseAICLICheckBox"
                          Margin="0,0,0,0"
                          Checked="UseAICLICheckBox_Changed"
                          Unchecked="UseAICLICheckBox_Changed">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Robot"
                                                 Width="20" Height="20"
                                                 Foreground="{DynamicResource PrimaryBrush}"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="AI CLI 사용 (Claude, Codex, Gemini...)"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                </CheckBox>

                <!-- AI CLI 옵션 패널 (체크 시 표시) -->
                <Border x:Name="AICLIOptionsPanel"
                        Visibility="Collapsed"
                        Background="{DynamicResource CardBrush}"
                        CornerRadius="6"
                        Padding="16"
                        Margin="0,8,0,0"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1">
                    <StackPanel>
                        <!-- AI CLI 선택 콤보박스 -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="CLI:"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                            <ComboBox x:Name="AICLICombo"
                                      Grid.Column="1"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      SelectionChanged="AICLICombo_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="{Binding IconKind}"
                                                                     Width="18" Height="18"
                                                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                                                     VerticalAlignment="Center"
                                                                     Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Description}"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       FontSize="11"
                                                       Margin="8,0,0,0"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>

                        <!-- 설치 상태 표시 -->
                        <Border x:Name="InstallStatusBorder"
                                Background="{DynamicResource SurfaceBrush}"
                                CornerRadius="4"
                                Padding="10,6"
                                Margin="0,0,0,12"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 설치됨 표시 -->
                                <StackPanel x:Name="InstalledPanel" Orientation="Horizontal" Visibility="Collapsed">
                                    <materialDesign:PackIcon Kind="CheckCircle"
                                                             Width="16" Height="16"
                                                             Foreground="#4CAF50"
                                                             VerticalAlignment="Center"/>
                                    <TextBlock x:Name="InstalledVersionText"
                                               Text="설치됨"
                                               FontSize="11"
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center"
                                               Margin="4,0,0,0"/>
                                </StackPanel>

                                <!-- 미설치 표시 -->
                                <StackPanel x:Name="NotInstalledPanel" Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="AlertCircle"
                                                             Width="16" Height="16"
                                                             Foreground="#FF9800"
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="미설치"
                                               FontSize="11"
                                               Foreground="#FF9800"
                                               VerticalAlignment="Center"
                                               Margin="4,0,0,0"/>
                                </StackPanel>

                                <!-- 설치 설명 -->
                                <TextBlock x:Name="InstallDescText"
                                           Grid.Column="1"
                                           FontSize="10"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="8,0"/>

                                <!-- 설치/웹사이트 버튼 -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <Button x:Name="InstallButton"
                                            Content="설치"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Height="24"
                                            Padding="10,0"
                                            FontSize="10"
                                            Click="InstallButton_Click"/>
                                    <Button x:Name="WebsiteButton"
                                            Style="{StaticResource MaterialDesignToolButton}"
                                            Width="24" Height="24"
                                            Margin="4,0,0,0"
                                            Click="WebsiteButton_Click"
                                            ToolTip="공식 웹사이트">
                                        <materialDesign:PackIcon Kind="OpenInNew" Width="14" Height="14"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- 실행 모드 선택 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <RadioButton x:Name="ModeNormalRadio"
                                         Content="일반 모드"
                                         IsChecked="True"
                                         Margin="0,0,16,0"
                                         Style="{StaticResource MaterialDesignRadioButton}"/>
                            <RadioButton x:Name="ModeAutoRadio"
                                         Content="자동 모드"
                                         Margin="0,0,16,0"
                                         Style="{StaticResource MaterialDesignRadioButton}"/>
                            <Button x:Name="AdvancedOptionsButton"
                                    Content="고급..."
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    FontSize="11"
                                    Height="24"
                                    Padding="8,0"
                                    Click="RunAICLIAdvancedButton_Click"/>
                        </StackPanel>
                        <TextBlock x:Name="ModeDescText"
                                   Text="각 작업마다 권한 확인이 필요합니다 (안전)"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- 시작하기 섹션 -->
                <TextBlock Text="시작하기"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,20,0,12"/>

                <!-- 액션 버튼들 -->
                <Button x:Name="OpenFolderButton"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="OpenFolderButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FolderOpen"
                                                 Width="20" Height="20"
                                                 Foreground="{DynamicResource PrimaryBrush}"
                                                 VerticalAlignment="Center"/>
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="폴더 열기" FontSize="14" Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="로컬 폴더를 열어 작업을 시작합니다"
                                       FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <Button x:Name="CloneRepositoryButton"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="CloneRepositoryButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Git"
                                                 Width="20" Height="20"
                                                 Foreground="#F14E32"
                                                 VerticalAlignment="Center"/>
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="저장소 복제" FontSize="14" Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="Git 저장소를 복제하여 시작합니다"
                                       FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <Button x:Name="NewProjectButton"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="NewProjectButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FolderPlus"
                                                 Width="20" Height="20"
                                                 Foreground="#4CAF50"
                                                 VerticalAlignment="Center"/>
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="새 프로젝트" FontSize="14" Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="새 폴더를 만들어 프로젝트를 시작합니다"
                                       FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <!-- 최근 폴더 섹션 -->
                <StackPanel x:Name="RecentFoldersSection" Margin="0,24,0,0">
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="최근 폴더"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>

                        <Button x:Name="ClearRecentButton"
                                Grid.Column="1"
                                Content="모두 지우기"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="{DynamicResource TextSecondaryBrush}"
                                FontSize="11"
                                Height="24"
                                Padding="8,0"
                                Click="ClearRecentButton_Click"/>
                    </Grid>

                    <ListBox x:Name="RecentFoldersList"
                             Background="Transparent"
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource RecentFolderItemStyle}"
                             SelectionChanged="RecentFoldersList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <materialDesign:PackIcon Kind="{Binding Icon}"
                                                             Width="18" Height="18"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,10,0">
                                        <materialDesign:PackIcon.Style>
                                            <Style TargetType="materialDesign:PackIcon">
                                                <Setter Property="Foreground" Value="#FFA000"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsGitRepository}" Value="True">
                                                        <Setter Property="Foreground" Value="#F14E32"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </materialDesign:PackIcon.Style>
                                    </materialDesign:PackIcon>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="13"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Path}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <Button Grid.Column="2"
                                            Style="{StaticResource MaterialDesignToolButton}"
                                            Width="24" Height="24"
                                            ToolTip="목록에서 제거"
                                            Click="RemoveRecentFolder_Click"
                                            Tag="{Binding Path}"
                                            Visibility="Collapsed"
                                            x:Name="RemoveButton">
                                        <materialDesign:PackIcon Kind="Close" Width="14" Height="14" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </Button>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                        <Setter TargetName="RemoveButton" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- 최근 폴더 없을 때 -->
                    <TextBlock x:Name="NoRecentFoldersText"
                               Text="최근에 열었던 폴더가 없습니다"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,20"
                               Visibility="Collapsed"/>
                </StackPanel>

                <!-- 팁 섹션 -->
                <Border Background="{DynamicResource CardBrush}"
                        CornerRadius="6"
                        Padding="16"
                        Margin="0,24,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Lightbulb"
                                                     Width="16" Height="16"
                                                     Foreground="#FFB300"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="팁"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#FFB300"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Ctrl+` 키로 언제든 새 로컬 터미널을 열 수 있습니다. 파일 탐색기 아이콘을 클릭하면 IDE처럼 폴더 구조를 볼 수 있습니다."
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   LineHeight="20"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
