<Window x:Class="TermSnap.Views.OrchestratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Claude Code Orchestrator"
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Claude Code Orchestrator"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       Margin="0,0,0,4"/>
            <TextBlock Text="PM + Worker 병렬 처리 시스템"
                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <!-- 설정 영역 -->
        <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 프로젝트 경로 -->
                <TextBox x:Name="ProjectPathTextBox"
                         Grid.Column="0"
                         Grid.Row="0"
                         materialDesign:HintAssist.Hint="프로젝트 경로"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,8,8"/>

                <Button x:Name="BrowseButton"
                        Grid.Column="1"
                        Grid.Row="0"
                        Content="찾아보기"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,8"
                        Click="BrowseButton_Click"/>

                <Button x:Name="LoadStateButton"
                        Grid.Column="2"
                        Grid.Row="0"
                        Content="상태 조회"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,0,8"
                        Click="LoadStateButton_Click"/>

                <!-- 실행 옵션 -->
                <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal">
                    <TextBlock Text="Worker 수:"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox x:Name="WorkerCountComboBox"
                              Width="80"
                              SelectedIndex="2"
                              Margin="0,0,16,0">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                    </ComboBox>

                    <CheckBox x:Name="CleanStartCheckBox"
                              Content="클린 스타트"
                              ToolTip="기존 상태 데이터를 삭제하고 새로 시작"
                              Margin="0,0,16,0"/>

                    <Button x:Name="LaunchButton"
                            Content="오케스트레이터 실행"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="LaunchButton_Click"/>

                    <Button x:Name="BuildMcpButton"
                            Content="MCP 서버 빌드"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="8,0,0,0"
                            Click="BuildMcpButton_Click"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- 메인 콘텐츠 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- 태스크 목록 -->
            <materialDesign:Card Grid.Column="0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 태스크 헤더 -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource PrimaryHueMidBrush}"
                            Padding="16,12">
                        <TextBlock Text="태스크 목록"
                                   FontWeight="Medium"
                                   Foreground="White"/>
                    </Border>

                    <!-- 진행률 바 -->
                    <Grid Grid.Row="1" Margin="16,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ProgressBar x:Name="ProgressBar"
                                     Height="8"
                                     Value="0"
                                     Maximum="100"/>
                        <TextBlock x:Name="ProgressText"
                                   Grid.Column="1"
                                   Text="0%"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <!-- 태스크 리스트 -->
                    <ListView x:Name="TaskListView"
                              Grid.Row="2"
                              BorderThickness="0"
                              VirtualizingStackPanel.IsVirtualizing="True">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12,8"
                                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                                        BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- 상태 아이콘 -->
                                        <materialDesign:PackIcon Grid.Column="0"
                                                                 Grid.RowSpan="2"
                                                                 Width="24" Height="24"
                                                                 VerticalAlignment="Center"
                                                                 Margin="0,0,12,0">
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="pending">
                                                            <Setter Property="Kind" Value="Clock"/>
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="in_progress">
                                                            <Setter Property="Kind" Value="Play"/>
                                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="completed">
                                                            <Setter Property="Kind" Value="Check"/>
                                                            <Setter Property="Foreground" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="failed">
                                                            <Setter Property="Kind" Value="AlertCircle"/>
                                                            <Setter Property="Foreground" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>

                                        <!-- ID 및 우선순위 -->
                                        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
                                            <TextBlock Text="{Binding Id}"
                                                       FontWeight="Medium"
                                                       FontSize="14"/>
                                            <Border Background="{DynamicResource PrimaryHueLightBrush}"
                                                    CornerRadius="4"
                                                    Padding="6,2"
                                                    Margin="8,0,0,0">
                                                <TextBlock Text="{Binding Priority, StringFormat='P{0}'}"
                                                           FontSize="11"
                                                           Foreground="White"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Prompt -->
                                        <TextBlock Grid.Column="1" Grid.Row="1"
                                                   Text="{Binding Prompt}"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxWidth="400"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   FontSize="12"
                                                   Margin="0,4,0,0"/>

                                        <!-- 담당자 -->
                                        <StackPanel Grid.Column="2" Grid.RowSpan="2"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding Owner}"
                                                       FontSize="12"
                                                       HorizontalAlignment="Right"
                                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                            <TextBlock Text="{Binding Status}"
                                                       FontSize="11"
                                                       HorizontalAlignment="Right"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </materialDesign:Card>

            <!-- 오른쪽 패널 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 워커 상태 -->
                <materialDesign:Card Grid.Row="0" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="{DynamicResource SecondaryHueMidBrush}"
                                Padding="16,12">
                            <TextBlock Text="워커 상태"
                                       FontWeight="Medium"
                                       Foreground="White"/>
                        </Border>

                        <ListView x:Name="WorkerListView"
                                  Grid.Row="1"
                                  BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12,8"
                                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                                            BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 상태 표시 -->
                                            <Ellipse Grid.Column="0"
                                                     Width="10" Height="10"
                                                     Margin="0,0,8,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="Gray"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="idle">
                                                                <Setter Property="Fill" Value="Green"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="working">
                                                                <Setter Property="Fill" Value="Orange"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="offline">
                                                                <Setter Property="Fill" Value="Gray"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Id}"
                                                           FontWeight="Medium"/>
                                                <TextBlock Text="{Binding CurrentTask, StringFormat='작업 중: {0}'}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                           Visibility="{Binding CurrentTask, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                <TextBlock Text="{Binding CompletedTasks, StringFormat='완료: {0}개'}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </materialDesign:Card>

                <!-- 파일 락 -->
                <materialDesign:Card Grid.Row="2" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="{DynamicResource MaterialDesignToolBarBackground}"
                                Padding="16,12">
                            <TextBlock Text="파일 락"
                                       FontWeight="Medium"/>
                        </Border>

                        <ListView x:Name="LockListView"
                                  Grid.Row="1"
                                  BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12,6"
                                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                                            BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding Path}"
                                                       FontFamily="Consolas"
                                                       FontSize="12"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding Owner, StringFormat='by {0}'}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Grid>

        <!-- 상태 바 -->
        <Border Grid.Row="3"
                Margin="0,16,0,0"
                Padding="8"
                Background="{DynamicResource MaterialDesignToolBarBackground}"
                CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText"
                           Text="준비"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="StatsText"
                               Text=""
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
