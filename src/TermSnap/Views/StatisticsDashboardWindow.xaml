<Window x:Class="TermSnap.Views.StatisticsDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{DynamicResource Statistics.Title}"
        Height="750"
        Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="ChartBar" Width="28" Height="28"
                                     VerticalAlignment="Center" Margin="0,0,10,0"
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <TextBlock Text="{DynamicResource Statistics.Title}"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource MaterialDesignBody}"/>
            <Button Content="{DynamicResource Common.Refresh}"
                    Width="100"
                    Margin="20,0,0,0"
                    Click="RefreshButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>

        <!-- 세션 통계 요약 카드 -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- AI API 호출 -->
            <Border Grid.Column="0" Padding="15" CornerRadius="8" Margin="0,0,10,0"
                    Background="{DynamicResource PrimaryHueLightBrush}">
                <StackPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Robot" Width="32" Height="32"
                                             HorizontalAlignment="Center"
                                             Foreground="{DynamicResource PrimaryHueDarkBrush}"/>
                    <TextBlock x:Name="TotalApiCallsText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,5,0,0"
                               Foreground="{DynamicResource PrimaryHueDarkBrush}"/>
                    <TextBlock Text="{DynamicResource Statistics.TotalApiCalls}"
                               FontSize="12" HorizontalAlignment="Center"
                               Foreground="{DynamicResource PrimaryHueDarkBrush}" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- 캐시 히트율 -->
            <Border Grid.Column="1" Padding="15" CornerRadius="8" Margin="0,0,10,0"
                    Background="#E8F5E9">
                <StackPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="DatabaseCheck" Width="32" Height="32"
                                             HorizontalAlignment="Center"
                                             Foreground="#2E7D32"/>
                    <TextBlock x:Name="CacheHitRateText" Text="0%"
                               FontSize="28" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,5,0,0"
                               Foreground="#2E7D32"/>
                    <TextBlock Text="{DynamicResource Statistics.CacheHitRate}"
                               FontSize="12" HorizontalAlignment="Center"
                               Foreground="#2E7D32" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- 명령어 실행 -->
            <Border Grid.Column="2" Padding="15" CornerRadius="8" Margin="0,0,10,0"
                    Background="#E3F2FD">
                <StackPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Console" Width="32" Height="32"
                                             HorizontalAlignment="Center"
                                             Foreground="#1565C0"/>
                    <TextBlock x:Name="TotalCommandsText" Text="0"
                               FontSize="28" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,5,0,0"
                               Foreground="#1565C0"/>
                    <TextBlock Text="{DynamicResource Statistics.TotalCommands}"
                               FontSize="12" HorizontalAlignment="Center"
                               Foreground="#1565C0" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- 성공률 -->
            <Border Grid.Column="3" Padding="15" CornerRadius="8"
                    Background="#FFF3E0">
                <StackPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="CheckCircleOutline" Width="32" Height="32"
                                             HorizontalAlignment="Center"
                                             Foreground="#E65100"/>
                    <TextBlock x:Name="SuccessRateText" Text="0%"
                               FontSize="28" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,5,0,0"
                               Foreground="#E65100"/>
                    <TextBlock Text="{DynamicResource Statistics.SuccessRate}"
                               FontSize="12" HorizontalAlignment="Center"
                               Foreground="#E65100" Opacity="0.8"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 메인 컨텐츠 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 왼쪽: 일별 통계 -->
            <Border Grid.Column="0" Padding="15" CornerRadius="8" Margin="0,0,10,0"
                    Background="{DynamicResource MaterialDesignDivider}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="CalendarMonth" Width="20" Height="20"
                                                 VerticalAlignment="Center" Margin="0,0,8,0"
                                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                        <TextBlock Text="{DynamicResource Statistics.DailyStats}"
                                   FontWeight="Bold" FontSize="14"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBody}"/>
                    </StackPanel>

                    <DataGrid x:Name="DailyStatsGrid" Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              Background="Transparent"
                              Foreground="{DynamicResource MaterialDesignBody}"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeRows="False">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{DynamicResource Statistics.Date}"
                                                Binding="{Binding DateText}" Width="100"/>
                            <DataGridTextColumn Header="{DynamicResource Statistics.ApiCalls}"
                                                Binding="{Binding ApiCalls}" Width="70"/>
                            <DataGridTextColumn Header="{DynamicResource Statistics.CacheHit}"
                                                Binding="{Binding CacheHits}" Width="70"/>
                            <DataGridTextColumn Header="{DynamicResource Statistics.Commands}"
                                                Binding="{Binding CommandsExecuted}" Width="70"/>
                            <DataGridTemplateColumn Header="{DynamicResource Statistics.SuccessRate}" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding SuccessRate, StringFormat={}{0:F0}%}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- 오른쪽: 자주 사용하는 명령어 + 카테고리 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 자주 사용하는 명령어 -->
                <Border Grid.Row="0" Padding="15" CornerRadius="8" Margin="0,0,0,10"
                        Background="{DynamicResource MaterialDesignDivider}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="Star" Width="20" Height="20"
                                                     VerticalAlignment="Center" Margin="0,0,8,0"
                                                     Foreground="#FFC107"/>
                            <TextBlock Text="{DynamicResource Statistics.FrequentCommands}"
                                       FontWeight="Bold" FontSize="14"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource MaterialDesignBody}"/>
                        </StackPanel>

                        <ListBox x:Name="FrequentCommandsList" Grid.Row="1"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding Command}"
                                                   FontFamily="Consolas"
                                                   FontSize="12"
                                                   TextTrimming="CharacterEllipsis"
                                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                   ToolTip="{Binding Command}"/>

                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding TotalUseCount, StringFormat={}x{0}}"
                                                   FontSize="12" FontWeight="Bold"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   Margin="10,0,0,0"/>

                                        <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                                   Text="{Binding Description}"
                                                   FontSize="11"
                                                   TextTrimming="CharacterEllipsis"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   ToolTip="{Binding Description}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- 카테고리별 통계 -->
                <Border Grid.Row="1" Padding="15" CornerRadius="8"
                        Background="{DynamicResource MaterialDesignDivider}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="TagMultiple" Width="20" Height="20"
                                                     VerticalAlignment="Center" Margin="0,0,8,0"
                                                     Foreground="{DynamicResource MaterialDesignBody}"/>
                            <TextBlock Text="{DynamicResource Statistics.CategoryStats}"
                                       FontWeight="Bold" FontSize="14"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource MaterialDesignBody}"/>
                        </StackPanel>

                        <ItemsControl x:Name="CategoryStatsList" Grid.Row="1">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10,6" Margin="0,0,8,8"
                                            CornerRadius="16"
                                            Background="{DynamicResource PrimaryHueLightBrush}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding CategoryIcon}"
                                                       FontSize="14" Margin="0,0,6,0"/>
                                            <TextBlock Text="{Binding Category}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource PrimaryHueDarkBrush}"/>
                                            <TextBlock Text="{Binding Count, StringFormat={} ({0})}"
                                                       FontSize="12" FontWeight="Bold"
                                                       Foreground="{DynamicResource PrimaryHueDarkBrush}"
                                                       Margin="4,0,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- 하단 정보 -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 세션 정보 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="{DynamicResource Statistics.SessionStart}"
                           FontSize="12" VerticalAlignment="Center"
                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                <TextBlock x:Name="SessionStartText" Text="-"
                           FontSize="12" VerticalAlignment="Center" Margin="5,0,20,0"
                           Foreground="{DynamicResource MaterialDesignBody}"/>
                <TextBlock Text="{DynamicResource Statistics.SavedApiCalls}"
                           FontSize="12" VerticalAlignment="Center"
                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                <TextBlock x:Name="SavedApiCallsText" Text="0"
                           FontSize="12" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"
                           Foreground="#4CAF50"/>
            </StackPanel>

            <Button Grid.Column="1" Content="{DynamicResource Common.Close}"
                    Width="100"
                    Click="CloseButton_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </Grid>
    </Grid>
</Window>
