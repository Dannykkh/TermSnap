<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:models="clr-namespace:TermSnap.Models">

    <!-- Terminal Block Template - 카드 스타일 (터미널 보기용) -->
    <DataTemplate x:Key="TerminalBlockTemplate" DataType="{x:Type models:CommandBlock}">
        <Border Margin="8,4"
                Background="{DynamicResource CardBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Style.Triggers>
                        <!-- Executing 상태: 주황색 테두리 + 약간 밝은 배경 -->
                        <DataTrigger Binding="{Binding Status}" Value="Executing">
                            <Setter Property="BorderBrush" Value="#FF9800"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="Background" Value="#2A2A2A"/>
                        </DataTrigger>
                        <!-- Success 상태: 초록색 테두리 -->
                        <DataTrigger Binding="{Binding Status}" Value="Success">
                            <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}"/>
                        </DataTrigger>
                        <!-- Failed 상태: 빨간색 테두리 -->
                        <DataTrigger Binding="{Binding Status}" Value="Failed">
                            <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}"/>
                        </DataTrigger>
                        <!-- Confirming 상태: 노란색 테두리 -->
                        <DataTrigger Binding="{Binding Status}" Value="Confirming">
                            <Setter Property="BorderBrush" Value="#FFC107"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 헤더: 상태 아이콘 + 사용자 입력 + 캐시 배지 -->
                <Border Grid.Row="0"
                        Background="{DynamicResource SurfaceBrush}"
                        Padding="12,8"
                        CornerRadius="8,8,0,0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                            <Style.Triggers>
                                <!-- Executing 상태: 약간 밝은 배경 -->
                                <DataTrigger Binding="{Binding Status}" Value="Executing">
                                    <Setter Property="Background" Value="#2D2D2D"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 상태 아이콘 -->
                        <TextBlock Grid.Column="0"
                                   Text="{Binding StatusIcon}"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>

                        <!-- 사용자 입력 -->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding UserInput}"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center"/>

                        <!-- 캐시 배지 -->
                        <Border Grid.Column="2"
                                Background="{DynamicResource CacheBadgeBrush}"
                                CornerRadius="10"
                                Padding="8,3"
                                Margin="8,0,0,0"
                                Visibility="{Binding IsFromCache, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="DatabaseCheck"
                                                         Width="12" Height="12"
                                                         Foreground="{DynamicResource SuccessBrush}"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SimilarityText}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource SuccessBrush}"
                                           Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- 명령어 영역 -->
                <Border Grid.Row="1"
                        Background="{DynamicResource TerminalBackgroundBrush}"
                        Padding="12,8"
                        Visibility="{Binding GeneratedCommand, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="$"
                                   FontFamily="Consolas, Cascadia Code, monospace"
                                   FontSize="13"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryBrush}"
                                   Margin="0,0,8,0"/>
                        <TextBox Text="{Binding GeneratedCommand, Mode=OneWay}"
                                 FontFamily="Consolas, Cascadia Code, monospace"
                                 FontSize="13"
                                 Foreground="{DynamicResource PrimaryBrush}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- 출력 영역 -->
                <Border Grid.Row="2" Padding="12,8">
                    <StackPanel>
                        <!-- 성공 출력 -->
                        <ScrollViewer MaxHeight="300"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Visibility="{Binding HasOutput, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBox Text="{Binding Output, Mode=OneWay}"
                                     FontFamily="Consolas, Cascadia Code, monospace"
                                     FontSize="12"
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Disabled"
                                     HorizontalScrollBarVisibility="Disabled"/>
                        </ScrollViewer>

                        <!-- 에러 출력 -->
                        <ScrollViewer MaxHeight="300"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBox Text="{Binding Error, Mode=OneWay}"
                                     FontFamily="Consolas, Cascadia Code, monospace"
                                     FontSize="12"
                                     Foreground="{DynamicResource ErrorBrush}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Disabled"
                                     HorizontalScrollBarVisibility="Disabled"/>
                        </ScrollViewer>

                        <!-- 출력 없음 -->
                        <TextBlock Text="{DynamicResource CommandBlock.NoOutput}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   FontStyle="Italic">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding HasOutput}" Value="False"/>
                                                <Condition Binding="{Binding HasError}" Value="False"/>
                                                <Condition Binding="{Binding Status}" Value="Success"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- 푸터: 시간, 실행시간, 캐시 방식 -->
                <Border Grid.Row="3"
                        Background="{DynamicResource SurfaceBrush}"
                        Padding="12,6"
                        CornerRadius="0,0,8,8">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ClockOutline"
                                                 Width="12" Height="12"
                                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm:ss'}"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="4,0,0,0"/>

                        <TextBlock Text="{Binding DurationText}"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="12,0,0,0"
                                   Visibility="{Binding DurationText, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <TextBlock FontSize="11"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="12,0,0,0"
                                   Visibility="{Binding IsFromCache, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Run Text="{DynamicResource CommandBlock.Cache}"/>
                            <Run Text="{Binding SearchMethod, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </DataTemplate>

    <!-- Chat Block Template - 채팅 UI 스타일 (블록 보기용) -->
    <DataTemplate x:Key="ChatBlockTemplate" DataType="{x:Type models:CommandBlock}">
        <Grid Margin="10,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 사용자 명령어 블록 (오른쪽 정렬, 최대 90% 너비) -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*"/> <!-- 최소 10% 빈 공간 -->
                    <ColumnDefinition Width="0.9*"/> <!-- 최대 90% 블록 -->
                </Grid.ColumnDefinitions>
                <Border Grid.Column="1"
                        HorizontalAlignment="Right"
                        Background="#1565C0"
                        CornerRadius="12,12,0,12"
                        Padding="12,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 사용자 입력 -->
                    <TextBlock Grid.Row="0"
                               Text="{Binding UserInput}"
                               FontSize="13"
                               Foreground="White"
                               TextWrapping="Wrap"
                               Visibility="{Binding UserInput, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- 실행된 명령어 -->
                    <Border Grid.Row="1"
                            Background="Transparent"
                            Margin="0,6,0,0"
                            Visibility="{Binding GeneratedCommand, Converter={StaticResource StringToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="$"
                                       FontFamily="Consolas, Cascadia Code, monospace"
                                       FontSize="12"
                                       Foreground="White"
                                       Margin="0,0,6,0"/>
                            <TextBox Text="{Binding GeneratedCommand, Mode=OneWay}"
                                     FontFamily="Consolas, Cascadia Code, monospace"
                                     FontSize="12"
                                     Foreground="White"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- 메타 정보 -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6,0,0">
                        <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}"
                                   FontSize="10"
                                   Foreground="White"
                                   Opacity="0.7"/>
                        <TextBlock Text="{Binding StatusIcon}"
                                   FontSize="10"
                                   Foreground="White"
                                   Opacity="0.7"
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                </Grid>
                </Border>
            </Grid>

            <!-- 서버 응답 블록 (왼쪽 정렬, 최대 90% 너비) -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.9*"/> <!-- 최대 90% 블록 -->
                    <ColumnDefinition Width="0.1*"/> <!-- 최소 10% 빈 공간 -->
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        HorizontalAlignment="Left"
                        Background="{DynamicResource CardBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="12,12,12,0"
                        Padding="12,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 응답 아이콘 + 레이블 (로컬/서버에 따라 다름) -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                        <materialDesign:PackIcon Kind="{Binding ResponseIconKind}"
                                                 Width="14" Height="14"
                                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ResponseLabel}"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="6,0,0,0"/>

                        <!-- 캐시 배지 -->
                        <Border Background="{DynamicResource CacheBadgeBrush}"
                                CornerRadius="8"
                                Padding="6,2"
                                Margin="8,0,0,0"
                                Visibility="{Binding IsFromCache, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="DatabaseCheck"
                                                         Width="10" Height="10"
                                                         Foreground="{DynamicResource SuccessBrush}"
                                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SimilarityText}"
                                           FontSize="9"
                                           Foreground="{DynamicResource SuccessBrush}"
                                           Margin="3,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- 설명 -->
                    <Border Grid.Row="1"
                            Background="{DynamicResource BlockExplanationBrush}"
                            CornerRadius="6"
                            Padding="8,6"
                            Margin="0,0,0,6"
                            Visibility="{Binding HasExplanation, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="LightbulbOutline"
                                                     Width="14" Height="14"
                                                     Foreground="{DynamicResource WarningBrush}"
                                                     VerticalAlignment="Top"
                                                     Margin="0,2,6,0"/>
                            <TextBlock Text="{Binding Explanation}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- 출력 내용 -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource TerminalBackgroundBrush}"
                            CornerRadius="6"
                            Padding="10,8"
                            VerticalAlignment="Top">
                        <StackPanel>
                            <ScrollViewer MaxHeight="300"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Visibility="{Binding HasOutput, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBox Text="{Binding Output, Mode=OneWay}"
                                         FontFamily="Consolas, Cascadia Code, monospace"
                                         FontSize="12"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Disabled"
                                         HorizontalScrollBarVisibility="Disabled"/>
                            </ScrollViewer>

                            <ScrollViewer MaxHeight="300"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBox Text="{Binding Error, Mode=OneWay}"
                                         FontFamily="Consolas, Cascadia Code, monospace"
                                         FontSize="12"
                                         Foreground="{DynamicResource ErrorBrush}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Disabled"
                                         HorizontalScrollBarVisibility="Disabled"/>
                            </ScrollViewer>

                            <TextBlock Text="{DynamicResource CommandBlock.NoOutput}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontStyle="Italic">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding HasOutput}" Value="False"/>
                                                    <Condition Binding="{Binding HasError}" Value="False"/>
                                                    <Condition Binding="{Binding Status}" Value="Success"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- 푸터 -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,6,0,0">
                        <TextBlock Text="{Binding DurationText}"
                                   FontSize="10"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Visibility="{Binding DurationText, Converter={StaticResource StringToVisibilityConverter}}"/>
                        <TextBlock FontSize="10"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="8,0,0,0"
                                   Visibility="{Binding IsFromCache, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Run Text="{DynamicResource CommandBlock.Cache}"/>
                            <Run Text="{Binding SearchMethod, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
                </Border>
            </Grid>
        </Grid>
    </DataTemplate>

    <!-- 기존 호환성 -->
    <DataTemplate x:Key="CommandBlockTemplate" DataType="{x:Type models:CommandBlock}">
        <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource ChatBlockTemplate}"/>
    </DataTemplate>

</ResourceDictionary>
