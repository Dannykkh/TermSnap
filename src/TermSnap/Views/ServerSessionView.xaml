<UserControl x:Class="TermSnap.Views.ServerSessionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:TermSnap.Views"
             xmlns:models="clr-namespace:TermSnap.Models">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="CommandBlockTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
            <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <!-- 메시지 템플릿 (다크 테마 지원) -->
        <DataTemplate x:Key="MessageTemplate">
            <Border>
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsUser}" Value="True">
                                <Setter Property="Background" Value="#1E3A5F"/>
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Margin" Value="50,5,10,5"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="Command">
                                <Setter Property="Background" Value="#3D3D00"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Margin" Value="10,5,50,5"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="Success">
                                <Setter Property="Background" Value="#1B4332"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Margin" Value="10,5,50,5"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="Error">
                                <Setter Property="Background" Value="#5C1A1A"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Margin" Value="10,5,50,5"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="Normal">
                                <Setter Property="Background" Value="#2D2D2D"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Margin" Value="10,5,50,5"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="Info">
                                <Setter Property="Background" Value="#0D3B66"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Margin" Value="10,5,50,5"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="Warning">
                                <Setter Property="Background" Value="#5C4A00"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Margin" Value="10,5,50,5"/>
                            </DataTrigger>
                        </Style.Triggers>
                        <Setter Property="CornerRadius" Value="10"/>
                        <Setter Property="Padding" Value="12"/>
                        <Setter Property="Background" Value="#2D2D2D"/>
                    </Style>
                </Border.Style>

                <StackPanel>
                    <TextBlock Text="{Binding Content}"
                               TextWrapping="Wrap"
                               FontFamily="Consolas"
                               FontSize="13"
                               LineHeight="18"
                               BaselineOffset="0"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm:ss'}"
                               FontSize="10"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- AI 장기기억 패널 (오버레이, 우측) -->
        <Border x:Name="MemoryBorder"
                Grid.Row="0"
                Panel.ZIndex="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Visibility="Collapsed"
                Margin="4">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="10" ShadowDepth="0"/>
            </Border.Effect>
            <local:MemoryPanel x:Name="MemoryPanelControl"
                               Width="380"/>
        </Border>

        <!-- 채팅 영역 (Block UI 또는 기존 메시지) -->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 검색/필터 패널 -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="10,8">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 검색 TextBox -->
                    <TextBox Grid.Column="0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="검색어 입력 (명령어, 출력, 오류)"
                             FontSize="12"
                             Height="32"
                             VerticalContentAlignment="Center"
                             Background="{DynamicResource CardBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             CaretBrush="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             Padding="8,0"
                             Margin="0,0,8,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                                <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- 상태 필터 ComboBox -->
                    <ComboBox Grid.Column="1"
                              x:Name="StatusFilterComboBox"
                              SelectionChanged="StatusFilter_SelectionChanged"
                              materialDesign:HintAssist.Hint="상태 필터"
                              FontSize="12"
                              Width="150"
                              Height="32"
                              VerticalContentAlignment="Center"
                              Margin="0,0,8,0"
                              SelectedIndex="0">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
                                <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                            </Style>
                        </ComboBox.Style>
                        <ComboBoxItem Content="전체" Tag=""/>
                        <ComboBoxItem Content="대기 중" Tag="Pending"/>
                        <ComboBoxItem Content="생성 중" Tag="Generating"/>
                        <ComboBoxItem Content="확인 대기" Tag="Confirming"/>
                        <ComboBoxItem Content="실행 중" Tag="Executing"/>
                        <ComboBoxItem Content="성공" Tag="Success"/>
                        <ComboBoxItem Content="실패" Tag="Failed"/>
                        <ComboBoxItem Content="취소됨" Tag="Cancelled"/>
                    </ComboBox>

                    <!-- 검색 초기화 버튼 -->
                    <Button Grid.Column="2"
                            Click="ClearSearch_Click"
                            ToolTip="검색 초기화"
                            Width="32" Height="32"
                            Padding="0"
                            Style="{StaticResource MaterialDesignIconButton}">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                    </Button>
                </Grid>
            </Border>

            <!-- 연결되지 않은 상태: 서버 연결 패널 -->
            <Border x:Name="ConnectionPanel"
                    Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    Visibility="{Binding IsConnected, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="400">
                    <Border Background="{DynamicResource CardBrush}"
                            CornerRadius="12"
                            Padding="32">
                        <StackPanel>
                            <!-- 아이콘 및 타이틀 -->
                            <materialDesign:PackIcon Kind="ServerNetwork"
                                                     Width="64" Height="64"
                                                     HorizontalAlignment="Center"
                                                     Foreground="{DynamicResource PrimaryBrush}"/>
                            <TextBlock Text="{DynamicResource ServerSession.ConnectToServer}"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       Margin="0,16,0,8"/>
                            <TextBlock Text="{DynamicResource ServerSession.SelectProfile}"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,0,0,24"/>

                            <!-- 저장된 프로필 목록 -->
                            <TextBlock Text="{DynamicResource ServerSession.SavedServers}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,0,0,8"/>

                            <Border BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    MaxHeight="250"
                                    Margin="0,0,0,16">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="ProfileList" ItemsSource="{Binding SavedProfiles}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Padding="12,8"
                                                        BorderBrush="{DynamicResource DividerBrush}"
                                                        BorderThickness="0,0,0,1">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <materialDesign:PackIcon Kind="Server"
                                                                                  Width="20" Height="20"
                                                                                  VerticalAlignment="Center"
                                                                                  Foreground="{DynamicResource PrimaryBrush}"/>
                                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding ProfileName}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                            <TextBlock Foreground="{DynamicResource TextSecondaryBrush}"
                                                                       FontSize="11">
                                                                <Run Text="{Binding Username}"/>@<Run Text="{Binding Host}"/>:<Run Text="{Binding Port}"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                        <!-- 편집 버튼 -->
                                                        <Button Grid.Column="2"
                                                                Click="EditProfile_Click"
                                                                ToolTip="{DynamicResource ServerSession.EditProfile}"
                                                                Padding="6"
                                                                Margin="8,0"
                                                                Style="{StaticResource MaterialDesignIconButton}">
                                                            <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18"/>
                                                        </Button>
                                                        <!-- 연결 버튼 -->
                                                        <Button Grid.Column="3"
                                                                Content="{DynamicResource ServerSession.Connect}"
                                                                Click="ConnectProfile_Click"
                                                                Padding="16,6"
                                                                FontSize="12"
                                                                Style="{StaticResource MaterialDesignRaisedButton}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>

                            <!-- 프로필 없을 때 메시지 -->
                            <TextBlock x:Name="NoProfileMessage"
                                       Text="{DynamicResource ServerSession.NoSavedServers}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"
                                       Visibility="Collapsed"/>

                            <!-- 버튼들 -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="{DynamicResource ServerSession.AddNewServer}"
                                        Click="AddNewServer_Click"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Margin="0,0,12,0"
                                        Padding="16,8"/>
                                <Button Content="{DynamicResource ServerSession.Settings}"
                                        Click="OpenSettings_Click"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Padding="16,8"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- 블록 보기 - 채팅 UI 스타일 (UseBlockUI=True) -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="10"
                          Name="BlockScrollViewer">
                <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsConnected}" Value="True"/>
                                    <Condition Binding="{Binding UseBlockUI}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </ScrollViewer.Style>
                <ItemsControl ItemsSource="{Binding FilteredCommandBlocks}"
                              ItemTemplate="{StaticResource ChatBlockTemplate}"/>
            </ScrollViewer>

            <!-- 터미널 보기 - 카드 블록 스타일 (UseBlockUI=False) -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="10"
                          Name="TerminalScrollViewer">
                <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsConnected}" Value="True"/>
                                    <Condition Binding="{Binding UseBlockUI}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </ScrollViewer.Style>
                <ItemsControl ItemsSource="{Binding FilteredCommandBlocks}"
                              ItemTemplate="{StaticResource TerminalBlockTemplate}"/>
            </ScrollViewer>
        </Grid>

        <!-- 입력 영역 -->
        <Grid Grid.Row="1" Grid.Column="0"
              Margin="10"
              IsEnabled="{Binding IsConnected}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 현재 경로 표시 -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="10,6"
                    Margin="0,0,0,8"
                    Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FolderOutline"
                                             Width="16" Height="16"
                                             Foreground="{DynamicResource PrimaryBrush}"
                                             VerticalAlignment="Center"/>
                    <TextBlock Text="{DynamicResource ServerSession.CurrentPath}"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="6,0,8,0"/>
                    <TextBlock Text="{Binding CurrentDirectory}"
                               FontFamily="Consolas"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- 추천 팝업 -->
            <Border x:Name="SuggestionPopup"
                    Grid.Row="1"
                    Background="{DynamicResource CardBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,0,8"
                    Padding="12"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 추천 헤더 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon x:Name="SuggestionIcon"
                                                 Kind="Lightbulb"
                                                 Width="16" Height="16"
                                                 Foreground="{DynamicResource PrimaryBrush}"
                                                 VerticalAlignment="Center"/>
                        <TextBlock x:Name="SuggestionSource"
                                   Text="{DynamicResource ServerSession.Recommended}"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="6,0,0,0"/>
                    </StackPanel>

                    <!-- 추천 내용 -->
                    <Border Grid.Row="1"
                            Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="4"
                            Padding="10"
                            Cursor="Hand"
                            MouseLeftButtonUp="SuggestionItem_Click">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="SuggestionDescription"
                                       Grid.Row="0"
                                       Text=""
                                       FontSize="12"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock x:Name="SuggestionCommand"
                                       Grid.Row="1"
                                       Text=""
                                       FontFamily="Consolas"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="0,4,0,0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- 입력 행 -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 추천 토글 (ON: AI 추천, OFF: 직접 명령어 실행) -->
                <ToggleButton x:Name="SuggestionToggle"
                              Grid.Column="0"
                              ToolTip="ON: AI 추천/변환, OFF: 직접 명령어 실행"
                              IsChecked="{Binding UseAISuggestion, Mode=TwoWay}"
                              Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                              Width="48" Height="48"
                              Margin="0,0,8,0"
                              Checked="SuggestionToggle_Changed"
                              Unchecked="SuggestionToggle_Changed">
                    <materialDesign:PackIcon Kind="LightbulbOnOutline" Width="20" Height="20"/>
                </ToggleButton>

                <Grid Grid.Column="1">
                    <TextBox x:Name="InputTextBox"
                             Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14"
                             Padding="12"
                             Height="56"
                             VerticalContentAlignment="Center"
                             Background="{DynamicResource CardBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             CaretBrush="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"
                             AllowDrop="True"
                             DragEnter="InputTextBox_DragEnter"
                             DragOver="InputTextBox_DragOver"
                             Drop="InputTextBox_Drop"
                             PreviewKeyDown="InputTextBox_PreviewKeyDown"
                             TextChanged="InputTextBox_TextChanged">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SendMessageCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- 자동완성 팝업 -->
                    <Popup x:Name="AutoCompletePopup"
                           PlacementTarget="{Binding ElementName=InputTextBox}"
                           Placement="Top"
                           StaysOpen="False"
                           AllowsTransparency="True"
                           PopupAnimation="Fade"
                           HorizontalOffset="0"
                           VerticalOffset="-4">
                        <local:AutoCompletePopup x:Name="AutoCompleteControl"
                                                 Width="{Binding ActualWidth, ElementName=InputTextBox}"
                                                 SuggestionConfirmed="AutoComplete_SuggestionConfirmed"
                                                 CloseRequested="AutoComplete_CloseRequested"/>
                    </Popup>
                </Grid>

                <!-- 파일 트리 토글 버튼 -->
                <Button Grid.Column="2"
                        Command="{Binding ToggleFileTreeCommand}"
                        ToolTip="파일 탐색기 토글 (Ctrl+B)"
                        Width="48" Height="48"
                        Margin="10,0,0,0">
                    <materialDesign:PackIcon Kind="FolderOutline"
                                             Width="20" Height="20"/>
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
                            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFileTreeVisible}" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- AI 장기기억 토글 버튼 -->
                <Button x:Name="MemoryToggleButton"
                        Grid.Column="3"
                        Click="MemoryToggle_Click"
                        ToolTip="AI 장기기억 (MEMORY.md)"
                        Width="48" Height="48"
                        Margin="10,0,0,0"
                        Style="{StaticResource MaterialDesignIconButton}">
                    <materialDesign:PackIcon Kind="Brain"
                                             Width="20" Height="20"
                                             Foreground="{DynamicResource TextSecondaryBrush}"/>
                </Button>

                <Button Grid.Column="4"
                        Command="{Binding SendMessageCommand}"
                        Margin="10,0,0,0"
                        Width="100"
                        Height="56"
                        Background="{DynamicResource PrimaryBrush}"
                        Foreground="{DynamicResource TextOnPrimaryBrush}"
                        BorderThickness="0"
                        Content="{DynamicResource ServerSession.Send}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
