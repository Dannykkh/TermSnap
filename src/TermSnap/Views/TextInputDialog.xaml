<Window x:Class="TermSnap.Views.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{DynamicResource TextInput.Title}"
        Height="200"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 프롬프트 텍스트 -->
        <TextBlock Grid.Row="0"
                   x:Name="PromptTextBlock"
                   Text="{DynamicResource TextInput.Prompt}"
                   FontSize="14"
                   Foreground="{DynamicResource MaterialDesignBody}"
                   Margin="0,0,0,15"/>

        <!-- 입력 -->
        <TextBox Grid.Row="1"
                 x:Name="InputTextBox"
                 materialDesign:HintAssist.Hint="{DynamicResource TextInput.Hint}"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 FontSize="14"
                 Foreground="{DynamicResource MaterialDesignBody}"
                 CaretBrush="{DynamicResource PrimaryHueMidBrush}"
                 VerticalAlignment="Top">
            <TextBox.InputBindings>
                <KeyBinding Key="Return" Command="{Binding OkCommand}"/>
            </TextBox.InputBindings>
        </TextBox>

        <!-- 버튼 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="{DynamicResource TextInput.Cancel}"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
            <Button Content="{DynamicResource TextInput.OK}"
                    Width="100"
                    Click="OkButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
