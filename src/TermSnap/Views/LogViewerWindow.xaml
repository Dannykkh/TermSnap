<Window x:Class="TermSnap.Views.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource LogViewer.Title}"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 툴바 -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{DynamicResource LogViewer.LogFile}" Foreground="White"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>

                <ComboBox x:Name="LogFileComboBox" Grid.Column="1"
                          IsEditable="True"
                          Background="#3E3E42" Foreground="White"
                          Margin="0,0,10,0">
                    <ComboBoxItem Content="/var/log/syslog"/>
                    <ComboBoxItem Content="/var/log/messages"/>
                    <ComboBoxItem Content="/var/log/auth.log"/>
                    <ComboBoxItem Content="/var/log/secure"/>
                    <ComboBoxItem Content="/var/log/kern.log"/>
                    <ComboBoxItem Content="/var/log/nginx/access.log"/>
                    <ComboBoxItem Content="/var/log/nginx/error.log"/>
                    <ComboBoxItem Content="/var/log/apache2/access.log"/>
                    <ComboBoxItem Content="/var/log/apache2/error.log"/>
                    <ComboBoxItem Content="journalctl -f"/>
                </ComboBox>

                <Button x:Name="StartButton" Grid.Column="2" Click="StartButton_Click"
                        Background="#0E639C" Foreground="White"
                        Padding="15,5" Margin="0,0,5,0" BorderThickness="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text=">" FontWeight="Bold" Margin="0,0,5,0"/>
                        <TextBlock Text="{DynamicResource LogViewer.Start}"/>
                    </StackPanel>
                </Button>

                <Button x:Name="StopButton" Grid.Column="3" Click="StopButton_Click"
                        Background="#C42B1C" Foreground="White"
                        Padding="15,5" Margin="0,0,5,0" BorderThickness="0"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="||" FontWeight="Bold" Margin="0,0,5,0"/>
                        <TextBlock Text="{DynamicResource LogViewer.Stop}"/>
                    </StackPanel>
                </Button>

                <Button x:Name="ClearButton" Grid.Column="4" Click="ClearButton_Click"
                        Background="#3E3E42" Foreground="White"
                        Padding="15,5" Margin="0,0,5,0" BorderThickness="0">
                    <TextBlock Text="{DynamicResource LogViewer.Clear}"/>
                </Button>

                <CheckBox x:Name="AutoScrollCheckBox" Grid.Column="5"
                          Content="{DynamicResource LogViewer.AutoScroll}" Foreground="White"
                          IsChecked="True" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- 필터 바 -->
        <Border Grid.Row="1" Background="#252526" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{DynamicResource LogViewer.Filter}" Foreground="#CCCCCC"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>

                <TextBox x:Name="FilterTextBox" Grid.Column="1"
                         Background="#3E3E42" Foreground="White"
                         BorderThickness="0" Padding="5,3"
                         TextChanged="FilterTextBox_TextChanged"/>

                <TextBlock Grid.Column="2" Text="{DynamicResource LogViewer.Level}" Foreground="#CCCCCC"
                           VerticalAlignment="Center" Margin="10,0,10,0"/>

                <ComboBox x:Name="LevelFilterComboBox" Grid.Column="3"
                          Width="100" SelectionChanged="LevelFilterComboBox_SelectionChanged"
                          Background="#3E3E42" Foreground="White">
                    <ComboBoxItem Content="{DynamicResource LogViewer.LevelAll}" IsSelected="True"/>
                    <ComboBoxItem Content="Error"/>
                    <ComboBoxItem Content="Warning"/>
                    <ComboBoxItem Content="Info"/>
                    <ComboBoxItem Content="Debug"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- 로그 출력 영역 -->
        <ListBox x:Name="LogListBox" Grid.Row="2"
                 Background="#1E1E1E" Foreground="White"
                 BorderThickness="0"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas, D2Coding, Courier New"
                 FontSize="12">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding TimestampFormatted}"
                                   Foreground="#808080" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" Text="{Binding Line}"
                                   Foreground="{Binding LevelColor}"
                                   TextWrapping="NoWrap"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="5,2"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#264F78"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2A2D2E"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- 상태바 -->
        <Border Grid.Row="3" Background="#007ACC" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Ellipse x:Name="StatusIndicator" Grid.Column="0"
                         Width="10" Height="10" Fill="#808080"
                         VerticalAlignment="Center" Margin="0,0,10,0"/>

                <TextBlock x:Name="StatusText" Grid.Column="1"
                           Text="{DynamicResource LogViewer.Waiting}" Foreground="White"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="LineCountText" Grid.Column="3"
                           Text="{DynamicResource LogViewer.LineCount}" Foreground="White"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
