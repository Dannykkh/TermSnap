<Window x:Class="TermSnap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:TermSnap.Views"
        xmlns:vm="clr-namespace:TermSnap.ViewModels"
        Title="TermSnap"
        Height="850" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        Icon="Resources/termsnap_icon2.ico">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <views:TypeToBoolConverter x:Key="TypeToBoolConverter"/>

        <!-- 세션 선택 화면용 DataTemplate -->
        <DataTemplate x:Key="SelectorTemplate" DataType="{x:Type vm:NewSessionSelectorViewModel}">
            <views:NewSessionSelectorView DataContext="{Binding}"/>
        </DataTemplate>

        <!-- SSH 세션용 DataTemplate -->
        <DataTemplate x:Key="SshSessionTemplate" DataType="{x:Type vm:ServerSessionViewModel}">
            <views:ServerSessionView DataContext="{Binding}"/>
        </DataTemplate>

        <!-- 로컬 터미널용 DataTemplate -->
        <DataTemplate x:Key="LocalSessionTemplate" DataType="{x:Type vm:LocalTerminalViewModel}">
            <views:LocalTerminalView DataContext="{Binding}"/>
        </DataTemplate>

        <!-- Session DataTemplate Selector -->
        <views:SessionDataTemplateSelector x:Key="SessionTemplateSelector"
                                           SelectorTemplate="{StaticResource SelectorTemplate}"
                                           SshSessionTemplate="{StaticResource SshSessionTemplate}"
                                           LocalSessionTemplate="{StaticResource LocalSessionTemplate}"/>
        
        <!-- Warp 스타일 TabItem -->
        <Style x:Key="WarpTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="MaxWidth" Value="180"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,2"
                                BorderBrush="Transparent"
                                Padding="8,8"
                                Cursor="Hand">
                            <ContentPresenter ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource CardBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 상단 탭 바 -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 탭 헤더들 + 새탭 버튼 -->
                <StackPanel Orientation="Horizontal" Margin="8,0">
                    <!-- TabControl 탭 헤더 (탭 패널만 표시) -->
                    <TabControl x:Name="MainTabControl"
                                ItemsSource="{Binding Sessions}"
                                SelectedItem="{Binding SelectedSession}"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0">
                        <TabControl.ItemContainerStyle>
                            <Style TargetType="TabItem" BasedOn="{StaticResource WarpTabItemStyle}"/>
                        </TabControl.ItemContainerStyle>
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 아이콘 (쉘 타입별) -->
                                    <materialDesign:PackIcon Grid.Column="0"
                                                             Width="16" Height="16"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,6,0">
                                        <materialDesign:PackIcon.Style>
                                            <Style TargetType="materialDesign:PackIcon">
                                                <!-- SSH 세션 기본 아이콘 -->
                                                <Setter Property="Kind" Value="Server"/>
                                                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                                                <Style.Triggers>
                                                    <!-- 로컬 세션: 쉘 타입별 아이콘 -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Type}" Value="Local"/>
                                                            <Condition Binding="{Binding ShellType}" Value="PowerShell"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Kind" Value="Powershell"/>
                                                        <Setter Property="Foreground" Value="#0088FF"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Type}" Value="Local"/>
                                                            <Condition Binding="{Binding ShellType}" Value="Cmd"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Kind" Value="Console"/>
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Type}" Value="Local"/>
                                                            <Condition Binding="{Binding ShellType}" Value="WSL"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Kind" Value="Linux"/>
                                                        <Setter Property="Foreground" Value="#FFA500"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Type}" Value="Local"/>
                                                            <Condition Binding="{Binding ShellType}" Value="GitBash"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Kind" Value="Git"/>
                                                        <Setter Property="Foreground" Value="#F05032"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </materialDesign:PackIcon.Style>
                                    </materialDesign:PackIcon>

                                    <!-- 중앙: 스피너 + 상태 + 탭 헤더 -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <!-- 데이터 수신 스피너 -->
                                        <TextBlock Text="{Binding SpinnerText}"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   FontFamily="Consolas"
                                                   Foreground="{DynamicResource SuccessBrush}"
                                                   Margin="0,0,4,0"
                                                   Visibility="{Binding SpinnerText, Converter={StaticResource StringToVisibilityConverter}}"/>
                                        <!-- 포트 포워딩 상태 -->
                                        <TextBlock Text="{Binding PortForwardingStatusText}"
                                                   VerticalAlignment="Center"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource PrimaryBrush}"
                                                   Margin="0,0,4,0"
                                                   Visibility="{Binding PortForwardingStatusText, Converter={StaticResource StringToVisibilityConverter}}"/>
                                        <!-- 탭 헤더 (텍스트 잘림 처리) -->
                                        <TextBlock Text="{Binding TabHeader}"
                                                   VerticalAlignment="Center"
                                                   FontSize="13"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxWidth="120"/>
                                    </StackPanel>

                                    <!-- 오른쪽: 닫기 버튼 (마우스 오버시에만 표시) -->
                                    <Button Grid.Column="2"
                                            x:Name="CloseButton"
                                            Content="✕"
                                            Width="16" Height="16"
                                            Padding="0"
                                            FontSize="10"
                                            Background="Transparent"
                                            Foreground="{DynamicResource TextSecondaryBrush}"
                                            BorderThickness="0"
                                            VerticalAlignment="Center"
                                            Margin="8,0,0,0"
                                            Opacity="0"
                                            Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="2"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <!-- 탭에 마우스 오버시 닫기 버튼 표시 -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="CloseButton" Property="Opacity" Value="1"/>
                                    </Trigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                        <!-- 컨텐츠는 별도로 표시하므로 여기선 빈 템플릿 -->
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <ContentControl/>
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                    
                    <!-- 새 탭 버튼 -->
                    <Button Command="{Binding NewTabCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="8,6"
                            Margin="4,0,0,0"
                            Cursor="Hand"
                            ToolTip="{DynamicResource MainWindow.NewTabTooltip}">
                        <materialDesign:PackIcon Kind="Plus" Width="16" Height="16" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Button>
                </StackPanel>

                <!-- 우측: AI 상태 + 버튼들 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                    <!-- 현재 AI 설정 표시 -->
                    <Border Background="{DynamicResource CardBrush}"
                            CornerRadius="4"
                            Padding="8,4"
                            Margin="0,0,12,0"
                            ToolTip="{DynamicResource MainWindow.AIProviderTooltip}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Robot"
                                                     Width="14" Height="14"
                                                     Foreground="{DynamicResource PrimaryBrush}"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding CurrentAIDisplayName}"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Button Command="{Binding OpenHistoryCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="8,6"
                            Cursor="Hand"
                            ToolTip="{DynamicResource MainWindow.HistoryTooltip}">
                        <materialDesign:PackIcon Kind="History" Width="18" Height="18" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Button>

                    <Button Command="{Binding OpenQAManagerCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="8,6"
                            Cursor="Hand"
                            ToolTip="{DynamicResource MainWindow.QATooltip}">
                        <materialDesign:PackIcon Kind="Database" Width="18" Height="18" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Button>

                    <Button Command="{Binding OpenSettingsCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="8,6"
                            Cursor="Hand"
                            ToolTip="{DynamicResource MainWindow.SettingsTooltip}">
                        <materialDesign:PackIcon Kind="Cog" Width="18" Height="18" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 메인 컨텐츠 영역 -->
        <Grid Grid.Row="1" x:Name="MainContentGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 파일 트리 패널 (좌측) -->
            <views:FileTreePanel x:Name="FileTreePanelControl"
                                 Grid.Column="0"
                                 Width="280"
                                 VerticalAlignment="Stretch"
                                 BorderBrush="#4A4A4A"
                                 BorderThickness="0,0,2,0"
                                 Visibility="Collapsed"/>

            <!-- 세션 컨텐츠 영역 -->
            <Grid Grid.Column="1">
                <!-- 단일 모드 - ContentControl로 선택된 세션 표시 -->
                <ContentControl x:Name="MainContentControl"
                                Content="{Binding SelectedSession}"
                                ContentTemplateSelector="{StaticResource SessionTemplateSelector}"
                                Visibility="Collapsed"/>

                <!-- 수평 분할 모드 -->
                <Grid x:Name="HorizontalSplitGrid" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="300"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*" MinWidth="300"/>
                    </Grid.ColumnDefinitions>

                    <ContentControl Grid.Column="0"
                                    Content="{Binding SelectedSession}"
                                    ContentTemplateSelector="{StaticResource SessionTemplateSelector}"/>
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"
                                  Background="{DynamicResource BorderBrush}" Cursor="SizeWE"/>
                    <ContentControl Grid.Column="2"
                                    Content="{Binding SecondarySession}"
                                    ContentTemplateSelector="{StaticResource SessionTemplateSelector}"/>
                </Grid>

                <!-- 수직 분할 모드 -->
                <Grid x:Name="VerticalSplitGrid" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="200"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*" MinHeight="200"/>
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="0"
                                    Content="{Binding SelectedSession}"
                                    ContentTemplateSelector="{StaticResource SessionTemplateSelector}"/>
                    <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"
                                  Background="{DynamicResource BorderBrush}" Cursor="SizeNS"/>
                    <ContentControl Grid.Row="2"
                                    Content="{Binding SecondarySession}"
                                    ContentTemplateSelector="{StaticResource SessionTemplateSelector}"/>
                </Grid>
            </Grid>

            <!-- 스니펫 패널 (우측, 로컬 터미널 전용) -->
            <Border Grid.Column="2"
                    x:Name="SnippetPanel"
                    Width="280"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1,0,0,0"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 패널 헤더 -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource PrimaryLightBrush}"
                            Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CodeBraces"
                                                         Width="18" Height="18"
                                                         VerticalAlignment="Center"
                                                         Foreground="{DynamicResource PrimaryBrush}"/>
                                <TextBlock Text="명령어 스니펫"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="6,0,0,0"/>
                            </StackPanel>

                            <!-- 닫기 버튼 -->
                            <Button Grid.Column="1"
                                    Command="{Binding ToggleSnippetPanelCommand}"
                                    ToolTip="패널 닫기"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Width="28" Height="28"
                                    Padding="0">
                                <materialDesign:PackIcon Kind="Close"
                                                         Width="18" Height="18"
                                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- 스니펫 목록 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CurrentSession.LocalSnippets}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="8,4"
                                            CornerRadius="6"
                                            Cursor="Hand"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            Tag="{Binding}">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick"
                                                          Command="{Binding DataContext.CurrentSession.UseSnippetCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid Margin="10,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- 스니펫 이름 -->
                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                       Text="{Binding Name}"
                                                       FontWeight="Bold"
                                                       FontSize="13"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <!-- 사용 횟수 -->
                                            <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                                        Orientation="Vertical"
                                                        VerticalAlignment="Center"
                                                        Margin="8,0,0,0">
                                                <materialDesign:PackIcon Kind="Counter"
                                                                         Width="14" Height="14"
                                                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                <TextBlock Text="{Binding UseCount}"
                                                           FontSize="11"
                                                           FontWeight="Bold"
                                                           Foreground="{DynamicResource PrimaryBrush}"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- 명령어 -->
                                            <TextBlock Grid.Row="1" Grid.Column="0"
                                                       Text="{Binding Command}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       FontFamily="Consolas"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,4,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Frequent Commands 패널 (우측, SSH 서버 전용) -->
            <Border Grid.Column="2"
                    x:Name="FrequentCommandsPanel"
                    Width="280"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1,0,0,0"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 패널 헤더 -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource PrimaryLightBrush}"
                            Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="StarOutline"
                                                         Width="18" Height="18"
                                                         VerticalAlignment="Center"
                                                         Foreground="{DynamicResource PrimaryBrush}"/>
                                <TextBlock Text="{DynamicResource ServerSession.FrequentCommands}"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="6,0,0,0"/>
                            </StackPanel>

                            <!-- 검색 버튼 -->
                            <Button Grid.Column="1"
                                    ToolTip="{DynamicResource ServerSession.SearchCommand}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Width="28" Height="28"
                                    Padding="0"
                                    Click="SearchCommands_Click">
                                <materialDesign:PackIcon Kind="Magnify"
                                                         Width="18" Height="18"
                                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- 명령어 목록 -->
                    <ListBox Grid.Row="1"
                             x:Name="FrequentCommandsListBox"
                             ItemsSource="{Binding CurrentSession.FrequentCommands}"
                             Background="Transparent"
                             BorderThickness="0"
                             AllowDrop="True"
                             PreviewMouseMove="FrequentCommandsList_PreviewMouseMove"
                             Drop="FrequentCommandsList_Drop"
                             DragOver="FrequentCommandsList_DragOver">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="8,4"
                                        CornerRadius="6"
                                        Cursor="Hand"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        Tag="{Binding}">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding DataContext.CurrentSession.UseFrequentCommandCmd, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding}"/>
                                        <MouseBinding MouseAction="LeftDoubleClick"
                                                      Command="{Binding DataContext.CurrentSession.ShowCommandDetailCmd, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                        <Grid Margin="10,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- 명령어 설명 (사용자 입력) -->
                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                       Text="{Binding Description}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <!-- 편집 버튼 -->
                                            <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                                    ToolTip="{DynamicResource ServerSession.EditCommand}"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Width="24" Height="24"
                                                    Padding="0"
                                                    VerticalAlignment="Center"
                                                    Click="EditFrequentCommand_Click"
                                                    Tag="{Binding}">
                                                <materialDesign:PackIcon Kind="CogOutline" Width="14" Height="14"
                                                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </Button>

                                            <!-- 명령어 -->
                                            <TextBlock Grid.Row="1" Grid.Column="0"
                                                       Text="{Binding Command}"
                                                       FontFamily="Consolas"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource PrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,4,0,0"/>

                                            <!-- 사용 횟수 및 마지막 사용 -->
                                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                        Orientation="Horizontal"
                                                        Margin="0,4,0,0">
                                                <materialDesign:PackIcon Kind="Replay"
                                                                         Width="12" Height="12"
                                                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                <TextBlock Text="{Binding TotalUseCount, StringFormat='{}{0}회'}"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           Margin="2,0,0,0"/>
                                                <TextBlock Text="*"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           Margin="6,0"/>
                                                <TextBlock Text="{Binding LastUsed, StringFormat='MM/dd HH:mm'}"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    <!-- 명령어 없을 때 안내 -->
                    <StackPanel Grid.Row="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentSession.FrequentCommands.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <materialDesign:PackIcon Kind="History"
                                                 Width="48" Height="48"
                                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource ServerSession.NoCommands}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,12,0,0"
                                   TextAlignment="Center"/>
                        <TextBlock Text="{DynamicResource ServerSession.CommandsWillAppear}"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- 전역 하단 상태 바 -->
        <materialDesign:ColorZone Grid.Row="2"
                                   Mode="PrimaryLight"
                                   Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 현재 디렉토리 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Folder"
                                            Width="16"
                                            Height="16"
                                            VerticalAlignment="Center"
                                            Foreground="{DynamicResource PrimaryBrush}"
                                            Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding CurrentDirectory}"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontFamily="Consolas"/>
                </StackPanel>

                <!-- 공용 도구 버튼들 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                    <!-- 파일 트리 토글 -->
                    <Button Command="{Binding ToggleFileTreeCommand}"
                            ToolTip="파일 탐색기"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Width="32" Height="32"
                            Padding="4"
                            Margin="0,0,4,0">
                        <materialDesign:PackIcon Kind="FileTree" Width="18" Height="18"/>
                    </Button>

                    <!-- 스니펫 패널 토글 -->
                    <Button Command="{Binding ToggleSnippetPanelCommand}"
                            ToolTip="스니펫 패널"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Width="32" Height="32"
                            Padding="4"
                            Margin="0,0,4,0">
                        <materialDesign:PackIcon Kind="CodeBraces" Width="18" Height="18"/>
                    </Button>

                    <!-- Block UI 토글 -->
                    <Button Command="{Binding ToggleBlockUICommand}"
                            ToolTip="블록 UI 모드"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Width="32" Height="32"
                            Padding="4"
                            Margin="0,0,4,0">
                        <materialDesign:PackIcon Kind="ViewAgendaOutline" Width="18" Height="18"/>
                    </Button>

                    <Rectangle Width="1" Fill="{DynamicResource BorderBrush}" Margin="8,4"/>

                    <!-- 출력 지우기 -->
                    <Button Command="{Binding ClearOutputCommand}"
                            ToolTip="출력 지우기"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Width="32" Height="32"
                            Padding="4"
                            Margin="0,0,4,0">
                        <materialDesign:PackIcon Kind="Eraser" Width="20" Height="20"/>
                    </Button>
                </StackPanel>

                <!-- SSH 전용 버튼들 (IsServerSession일 때만 표시) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="8,0,0,0">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsServerSession}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Rectangle Width="1" Fill="{DynamicResource BorderBrush}" Margin="0,4,8,4"/>

                    <!-- 파일 전송 -->
                    <Button Command="{Binding CurrentSession.OpenFileTransferCommand}"
                            ToolTip="파일 전송"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Width="32" Height="32"
                            Padding="4"
                            Margin="0,0,4,0">
                        <materialDesign:PackIcon Kind="FolderNetwork" Width="20" Height="20"/>
                    </Button>

                    <!-- Port Forwarding -->
                    <Button Command="{Binding CurrentSession.OpenPortForwardingManagerCommand}"
                            ToolTip="Port Forwarding 관리"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Width="32" Height="32"
                            Padding="4"
                            Margin="0,0,4,0">
                        <materialDesign:PackIcon Kind="Connection" Width="20" Height="20"/>
                    </Button>

                    <!-- 로그 뷰어 -->
                    <Button Command="{Binding CurrentSession.OpenLogViewerCommand}"
                            ToolTip="로그 뷰어"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Width="32" Height="32"
                            Padding="4"
                            Margin="0,0,4,0">
                        <materialDesign:PackIcon Kind="FileDocumentOutline" Width="20" Height="20"/>
                    </Button>

                    <!-- 서버 모니터 -->
                    <Button Command="{Binding CurrentSession.OpenMonitorCommand}"
                            ToolTip="서버 모니터링"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Width="32" Height="32"
                            Padding="4"
                            Margin="0,0,4,0">
                        <materialDesign:PackIcon Kind="MonitorDashboard" Width="20" Height="20"/>
                    </Button>
                </StackPanel>

                <!-- 연결 상태 -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="10,0">
                    <materialDesign:PackIcon Kind="Circle"
                                            Width="12"
                                            Height="12"
                                            VerticalAlignment="Center"
                                            Margin="0,0,5,0">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Foreground" Value="Red"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Foreground" Value="Green"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>

                    <!-- 리소스 사용량 -->
                    <materialDesign:PackIcon Kind="Memory"
                                             Width="16" Height="16"
                                             VerticalAlignment="Center"
                                             Foreground="#1976D2"
                                             Margin="8,0,4,0"
                                             ToolTip="메모리 사용량"/>
                    <TextBlock VerticalAlignment="Center"
                               FontFamily="Consolas"
                               FontSize="12"
                               Margin="0,0,12,0">
                        <Run Text="{Binding MemoryUsageMB, Mode=OneWay, StringFormat='{}{0:N0}'}" Foreground="#1565C0"/>
                        <Run Text="MB" Foreground="#1565C0"/>
                    </TextBlock>

                    <materialDesign:PackIcon Kind="Cpu64Bit"
                                             Width="16" Height="16"
                                             VerticalAlignment="Center"
                                             Foreground="#388E3C"
                                             Margin="0,0,4,0"
                                             ToolTip="CPU 사용률"/>
                    <TextBlock VerticalAlignment="Center"
                               FontFamily="Consolas"
                               FontSize="12">
                        <Run Text="{Binding CpuUsage, Mode=OneWay, StringFormat='{}{0:F1}'}" Foreground="#2E7D32"/>
                        <Run Text="%" Foreground="#2E7D32"/>
                    </TextBlock>
                </StackPanel>

                <!-- 진행 상태 바 -->
                <ProgressBar Grid.Column="5"
                             Width="100"
                             IsIndeterminate="True"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisConverter}}"/>
            </Grid>
        </materialDesign:ColorZone>
    </Grid>

    <Window.InputBindings>
        <KeyBinding Key="T" Modifiers="Control" Command="{Binding NewTabCommand}"/>
        <KeyBinding Key="W" Modifiers="Control" Command="{Binding CloseTabCommand}" CommandParameter="{Binding SelectedSession}"/>
        <KeyBinding Key="Tab" Modifiers="Control" Command="{Binding NextTabCommand}"/>
        <KeyBinding Key="Tab" Modifiers="Control+Shift" Command="{Binding PrevTabCommand}"/>
        <KeyBinding Key="D1" Modifiers="Control" Command="{Binding GoToTabCommand}" CommandParameter="0"/>
        <KeyBinding Key="D2" Modifiers="Control" Command="{Binding GoToTabCommand}" CommandParameter="1"/>
        <KeyBinding Key="D3" Modifiers="Control" Command="{Binding GoToTabCommand}" CommandParameter="2"/>
        <KeyBinding Key="D4" Modifiers="Control" Command="{Binding GoToTabCommand}" CommandParameter="3"/>
        <KeyBinding Key="D5" Modifiers="Control" Command="{Binding GoToTabCommand}" CommandParameter="4"/>
        <KeyBinding Key="OemComma" Modifiers="Control" Command="{Binding OpenSettingsCommand}"/>
        <KeyBinding Key="H" Modifiers="Control+Shift" Command="{Binding OpenHistoryCommand}"/>
    </Window.InputBindings>
</Window>
