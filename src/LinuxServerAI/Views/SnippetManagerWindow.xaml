<Window x:Class="Nebula.Views.SnippetManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="명령어 스니펫 관리"
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0"
                   Text="명령어 스니펫 관리"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- 검색 및 필터 -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchTextBox"
                     Grid.Column="0"
                     materialDesign:HintAssist.Hint="검색 (이름, 설명, 명령어, 태그)"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     TextChanged="SearchTextBox_TextChanged"/>

            <ComboBox x:Name="CategoryComboBox"
                      Grid.Column="1"
                      Width="150"
                      Margin="10,0,0,0"
                      materialDesign:HintAssist.Hint="카테고리"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      SelectionChanged="CategoryComboBox_SelectionChanged"/>

            <Button Grid.Column="2"
                    Content="새 스니펫"
                    Margin="10,0,0,0"
                    Click="NewSnippet_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </Grid>

        <!-- 스니펫 목록 -->
        <DataGrid x:Name="SnippetsDataGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  MouseDoubleClick="SnippetsDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="이름"
                                    Binding="{Binding Name}"
                                    Width="150"/>
                <DataGridTextColumn Header="설명"
                                    Binding="{Binding Description}"
                                    Width="200"/>
                <DataGridTextColumn Header="명령어"
                                    Binding="{Binding Command}"
                                    Width="*"/>
                <DataGridTextColumn Header="카테고리"
                                    Binding="{Binding Category}"
                                    Width="100"/>
                <DataGridTextColumn Header="사용 횟수"
                                    Binding="{Binding UseCount}"
                                    Width="80"/>
                <DataGridTemplateColumn Header="작업" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="편집"
                                        Click="EditSnippet_Click"
                                        Margin="0,0,5,0"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Height="28"/>
                                <Button Content="삭제"
                                        Click="DeleteSnippet_Click"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Height="28"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 버튼 -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <TextBlock Text="총 스니펫 수:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <TextBlock x:Name="CountTextBlock"
                       Text="0"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0,0,20,0"/>
            <Button Content="닫기"
                    Click="Close_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
