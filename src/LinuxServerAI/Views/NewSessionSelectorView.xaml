<UserControl x:Class="Nebula.Views.NewSessionSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 메인 선택 영역 -->
        <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 타이틀 -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="새 세션 시작"
                           FontSize="28"
                           FontWeight="Light"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="어떤 작업을 하시겠습니까?"
                           FontSize="14"
                           Foreground="#808080"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <!-- 선택 카드들 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- 로컬 터미널 카드 -->
                <Border x:Name="LocalTerminalCard"
                        Background="#252526"
                        BorderBrush="#3C3C3C"
                        BorderThickness="1"
                        CornerRadius="12"
                        Width="280"
                        Height="320"
                        Margin="15"
                        Cursor="Hand"
                        MouseEnter="Card_MouseEnter"
                        MouseLeave="Card_MouseLeave"
                        MouseLeftButtonDown="LocalTerminal_Click">
                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 아이콘 -->
                        <Border Grid.Row="0" 
                                Background="#2D3A2D"
                                CornerRadius="50"
                                Width="80" Height="80"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,20">
                            <materialDesign:PackIcon Kind="Console"
                                                     Width="40" Height="40"
                                                     Foreground="#4CAF50"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                        </Border>

                        <!-- 제목 -->
                        <TextBlock Grid.Row="1"
                                   Text="로컬 터미널"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>

                        <!-- 설명 -->
                        <TextBlock Grid.Row="2"
                                   Text="PowerShell, CMD, WSL 또는 Git Bash를 사용하여 로컬 컴퓨터에서 작업합니다."
                                   FontSize="13"
                                   Foreground="#AAAAAA"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,12,0,0"
                                   LineHeight="20"/>

                        <!-- 기능 태그 -->
                        <WrapPanel Grid.Row="3" 
                                   HorizontalAlignment="Center"
                                   Margin="0,15,0,0">
                            <Border Background="#2D2D30" CornerRadius="4" Padding="8,4" Margin="3">
                                <TextBlock Text="PowerShell" FontSize="11" Foreground="#4CAF50"/>
                            </Border>
                            <Border Background="#2D2D30" CornerRadius="4" Padding="8,4" Margin="3">
                                <TextBlock Text="CMD" FontSize="11" Foreground="#4CAF50"/>
                            </Border>
                            <Border Background="#2D2D30" CornerRadius="4" Padding="8,4" Margin="3">
                                <TextBlock Text="WSL" FontSize="11" Foreground="#4CAF50"/>
                            </Border>
                        </WrapPanel>
                    </Grid>
                </Border>

                <!-- SSH 서버 연결 카드 -->
                <Border x:Name="SshServerCard"
                        Background="#252526"
                        BorderBrush="#3C3C3C"
                        BorderThickness="1"
                        CornerRadius="12"
                        Width="280"
                        Height="320"
                        Margin="15"
                        Cursor="Hand"
                        MouseEnter="Card_MouseEnter"
                        MouseLeave="Card_MouseLeave"
                        MouseLeftButtonDown="SshServer_Click">
                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 아이콘 -->
                        <Border Grid.Row="0" 
                                Background="#2D3544"
                                CornerRadius="50"
                                Width="80" Height="80"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,20">
                            <materialDesign:PackIcon Kind="Server"
                                                     Width="40" Height="40"
                                                     Foreground="#4FC3F7"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                        </Border>

                        <!-- 제목 -->
                        <TextBlock Grid.Row="1"
                                   Text="SSH 서버 연결"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>

                        <!-- 설명 -->
                        <TextBlock Grid.Row="2"
                                   Text="원격 Linux 서버에 SSH로 연결하고 AI 어시스턴트의 도움을 받아 명령어를 실행합니다."
                                   FontSize="13"
                                   Foreground="#AAAAAA"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,12,0,0"
                                   LineHeight="20"/>

                        <!-- 기능 태그 -->
                        <WrapPanel Grid.Row="3" 
                                   HorizontalAlignment="Center"
                                   Margin="0,15,0,0">
                            <Border Background="#2D2D30" CornerRadius="4" Padding="8,4" Margin="3">
                                <TextBlock Text="SSH" FontSize="11" Foreground="#4FC3F7"/>
                            </Border>
                            <Border Background="#2D2D30" CornerRadius="4" Padding="8,4" Margin="3">
                                <TextBlock Text="SFTP" FontSize="11" Foreground="#4FC3F7"/>
                            </Border>
                            <Border Background="#2D2D30" CornerRadius="4" Padding="8,4" Margin="3">
                                <TextBlock Text="AI" FontSize="11" Foreground="#4FC3F7"/>
                            </Border>
                        </WrapPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>

        <!-- 하단 단축키 힌트 -->
        <Border Grid.Row="1" Background="#252526" Padding="20,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Foreground="#666666" FontSize="12">
                    <Run Text="단축키: "/>
                    <Run Text="Ctrl+`" Foreground="#4CAF50"/>
                    <Run Text=" 로컬 터미널  |  "/>
                    <Run Text="Ctrl+T" Foreground="#4FC3F7"/>
                    <Run Text=" SSH 연결"/>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
