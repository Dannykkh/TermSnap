<Window x:Class="Nebula.Views.ProfileSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="서버 프로필 선택"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="연결할 서버 선택"
                       FontSize="24"
                       FontWeight="Bold"/>
            <TextBlock Text="저장된 서버 프로필을 선택하거나 새로 만드세요"
                       FontSize="12"
                       Foreground="Gray"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 프로필 목록 -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="1"
                CornerRadius="4">
            <ListBox x:Name="ProfileListBox"
                     SelectionMode="Single"
                     MouseDoubleClick="ProfileListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 아이콘 -->
                            <materialDesign:PackIcon Grid.Column="0"
                                                    Kind="Server"
                                                    Width="32"
                                                    Height="32"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,15,0">
                                <materialDesign:PackIcon.Style>
                                    <Style TargetType="materialDesign:PackIcon">
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:PackIcon.Style>
                            </materialDesign:PackIcon>

                            <!-- 정보 -->
                            <StackPanel Grid.Column="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ProfileName}"
                                               FontSize="16"
                                               FontWeight="Bold"/>
                                    <materialDesign:PackIcon Kind="Star"
                                                            Width="16"
                                                            Height="16"
                                                            Foreground="Gold"
                                                            Margin="5,0,0,0"
                                                            Visibility="{Binding IsFavorite, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>

                                <TextBlock Margin="0,5,0,0">
                                    <Run Text="{Binding Username}"/>
                                    <Run Text="@"/>
                                    <Run Text="{Binding Host}"/>
                                    <Run Text=":"/>
                                    <Run Text="{Binding Port}"/>
                                </TextBlock>

                                <TextBlock Text="{Binding LastConnected, StringFormat='마지막 연결: {0:yyyy-MM-dd HH:mm}'}"
                                           FontSize="11"
                                           Foreground="Gray"
                                           Margin="0,5,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LastConnected}" Value="{x:Static system:DateTime.MinValue}">
                                                    <Setter Property="Text" Value="연결 이력 없음"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <!-- 인증 타입 배지 -->
                            <Border Grid.Column="2"
                                    Background="{DynamicResource PrimaryHueLightBrush}"
                                    CornerRadius="10"
                                    Padding="8,4"
                                    VerticalAlignment="Center">
                                <TextBlock FontSize="10"
                                           Foreground="White">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding AuthType}" Value="Password">
                                                    <Setter Property="Text" Value="비밀번호"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding AuthType}" Value="PrivateKey">
                                                    <Setter Property="Text" Value="SSH 키"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- 버튼들 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="새 프로필"
                    Click="NewProfile_Click"
                    Margin="0,0,10,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
            <Button Content="선택"
                    Click="Select_Click"
                    Margin="0,0,10,0"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button Content="취소"
                    Click="Cancel_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>
    </Grid>
</Window>
