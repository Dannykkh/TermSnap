<UserControl x:Class="Nebula.Views.LocalTerminalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Nebula.Views"
             xmlns:models="clr-namespace:Nebula.Models"
             xmlns:terminal="clr-namespace:Nebula.Controls.Terminal">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="CommandBlockTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
            
            <!-- 메시지 템플릿 -->
            <DataTemplate x:Key="MessageTemplate">
                <Border>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsUser}" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="50,5,10,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Command">
                                    <Setter Property="Background" Value="#FFF9C4"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Success">
                                    <Setter Property="Background" Value="#C8E6C9"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Error">
                                    <Setter Property="Background" Value="#FFCDD2"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Normal">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Info">
                                    <Setter Property="Background" Value="#E1F5FE"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Warning">
                                    <Setter Property="Background" Value="#FFF3E0"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="CornerRadius" Value="10"/>
                            <Setter Property="Padding" Value="12"/>
                            <Setter Property="Background" Value="#F5F5F5"/>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <TextBlock Text="{Binding Content}"
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas"
                                   FontSize="13"/>
                        <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm:ss'}"
                                   FontSize="10"
                                   Foreground="Gray"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition x:Name="FileViewerSplitterColumn" Width="Auto"/>
            <ColumnDefinition x:Name="FileViewerColumn" Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- 파일 트리 패널 (좌측) -->
        <local:FileTreePanel x:Name="FileTreePanelControl"
                             Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                             Width="280"
                             VerticalAlignment="Stretch"
                             BorderBrush="#4A4A4A"
                             BorderThickness="0,0,2,0"
                             Visibility="Collapsed"/>

        <!-- 출력 영역 (웰컴 화면 또는 터미널/블록 보기) -->
        <Grid Grid.Row="0" Grid.Column="1">
            <!-- 웰컴 화면 (폴더 미선택 시) -->
            <local:WelcomePanel x:Name="WelcomePanelControl"
                                Visibility="{Binding ShowWelcome, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- 인터랙티브 모드: VT100 터미널 컨트롤 -->
            <Border Background="#1E1E1E"
                    BorderBrush="#3E3E3E"
                    BorderThickness="1"
                    Margin="4"
                    CornerRadius="4"
                    Visibility="{Binding IsInteractiveMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <terminal:TerminalControl x:Name="TerminalCtrl"
                                          FontFamily="Consolas"
                                          FontSize="14"
                                          Margin="2"/>
            </Border>

            <!-- 블록 보기 - 채팅 UI 스타일 (UseBlockUI=True, 비인터랙티브) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Padding="10"
                          Name="BlockScrollViewer"
                          Focusable="True"
                          PreviewKeyDown="OutputArea_PreviewKeyDown">
                <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding ShowWelcome}" Value="False"/>
                                    <Condition Binding="{Binding UseBlockUI}" Value="True"/>
                                    <Condition Binding="{Binding IsInteractiveMode}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </ScrollViewer.Style>
                <ItemsControl ItemsSource="{Binding CommandBlocks}"
                              ItemTemplate="{StaticResource ChatBlockTemplate}"/>
            </ScrollViewer>

            <!-- 터미널 보기 - 카드 블록 스타일 (UseBlockUI=False, 비인터랙티브) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Padding="10"
                          Name="TerminalScrollViewer"
                          Focusable="True"
                          PreviewKeyDown="OutputArea_PreviewKeyDown">
                <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding ShowWelcome}" Value="False"/>
                                    <Condition Binding="{Binding UseBlockUI}" Value="False"/>
                                    <Condition Binding="{Binding IsInteractiveMode}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </ScrollViewer.Style>
                <ItemsControl ItemsSource="{Binding CommandBlocks}"
                              ItemTemplate="{StaticResource TerminalBlockTemplate}"/>
            </ScrollViewer>
        </Grid>

        <!-- 자주 사용하는 명령어 패널 (우측) -->
        <Border Grid.Row="0" Grid.Column="2"
                x:Name="SnippetPanel"
                Width="280"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1,0,0,0"
                Visibility="{Binding ShowSnippetPanel, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 패널 헤더 -->
                <Border Grid.Row="0"
                        Background="{DynamicResource PrimaryLightBrush}"
                        Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CodeBraces"
                                                     Width="18" Height="18"
                                                     VerticalAlignment="Center"
                                                     Foreground="{DynamicResource PrimaryBrush}"/>
                            <TextBlock Text="명령어 스니펫"
                                       FontWeight="Bold"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="6,0,0,0"/>
                        </StackPanel>

                        <!-- 추가 버튼 -->
                        <Button Grid.Column="1"
                                ToolTip="새 스니펫 추가"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Width="28" Height="28"
                                Padding="0"
                                Click="AddSnippet_Click">
                            <materialDesign:PackIcon Kind="Plus"
                                                     Width="18" Height="18"
                                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </Button>

                        <!-- 닫기 버튼 -->
                        <Button Grid.Column="2"
                                ToolTip="패널 닫기"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Width="28" Height="28"
                                Padding="0"
                                Click="CloseSnippetPanel_Click">
                            <materialDesign:PackIcon Kind="Close"
                                                     Width="18" Height="18"
                                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- 스니펫 목록 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding LocalSnippets}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="8,4"
                                        CornerRadius="6"
                                        Cursor="Hand"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        MouseLeftButtonUp="Snippet_Click"
                                        Tag="{Binding}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Margin="10,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- 스니펫 이름 -->
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- 편집/삭제 버튼 -->
                                        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <Button ToolTip="편집"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Width="24" Height="24"
                                                    Padding="0"
                                                    Click="EditSnippet_Click"
                                                    Tag="{Binding}">
                                                <materialDesign:PackIcon Kind="Pencil" Width="14" Height="14"
                                                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </Button>
                                            <Button ToolTip="삭제"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Width="24" Height="24"
                                                    Padding="0"
                                                    Click="DeleteSnippet_Click"
                                                    Tag="{Binding}">
                                                <materialDesign:PackIcon Kind="Delete" Width="14" Height="14"
                                                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </Button>
                                        </StackPanel>

                                        <!-- 명령어 -->
                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Text="{Binding Command}"
                                                   FontFamily="Consolas"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource PrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,4,0,0"/>

                                        <!-- 사용 횟수 및 카테고리 -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                    Orientation="Horizontal"
                                                    Margin="0,4,0,0">
                                            <Border Background="{DynamicResource PrimaryLightBrush}"
                                                    CornerRadius="3"
                                                    Padding="4,2">
                                                <TextBlock Text="{Binding Category}"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource PrimaryBrush}"/>
                                            </Border>
                                            <materialDesign:PackIcon Kind="Replay"
                                                                     Width="12" Height="12"
                                                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                                                     VerticalAlignment="Center"
                                                                     Margin="8,0,2,0"/>
                                            <TextBlock Text="{Binding UseCount, StringFormat='{}{0}회'}"
                                                       FontSize="10"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- 스니펫 없을 때 안내 -->
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="{Binding LocalSnippets.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                    <materialDesign:PackIcon Kind="CodeBracesBox"
                                             Width="48" Height="48"
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             HorizontalAlignment="Center"/>
                    <TextBlock Text="등록된 스니펫이 없습니다"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,12,0,0"
                               TextAlignment="Center"/>
                    <TextBlock Text="+ 버튼으로 자주 쓰는 명령어를 추가하세요"
                               FontSize="11"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,4,0,0"
                               TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 파일 뷰어 GridSplitter -->
        <GridSplitter x:Name="FileViewerSplitter"
                      Grid.Row="0" Grid.Column="3"
                      Width="6"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="Transparent"
                      Cursor="SizeWE"
                      ShowsPreview="True"
                      Visibility="Collapsed">
            <GridSplitter.Style>
                <Style TargetType="GridSplitter">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </GridSplitter.Style>
        </GridSplitter>

        <!-- 파일 뷰어 패널 (우측) -->
        <local:FileViewerPanel x:Name="FileViewerPanelControl"
                               Grid.Row="0" Grid.Column="4"
                               Width="400"
                               MinWidth="200"
                               MaxWidth="800"
                               Visibility="Collapsed"/>

        <!-- 입력 영역 -->
        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4"
              Margin="10"
              IsEnabled="{Binding IsConnected}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 현재 경로 표시 -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="10,6"
                    Margin="0,0,0,8"
                    Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FolderOutline"
                                             Width="16" Height="16"
                                             Foreground="{DynamicResource PrimaryBrush}"
                                             VerticalAlignment="Center"/>
                    <TextBlock Text="현재 경로:"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="6,0,8,0"/>
                    <TextBlock Text="{Binding CurrentDirectory}"
                               FontFamily="Consolas"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryBrush}"
                               VerticalAlignment="Center"/>

                    <!-- Git 브랜치 표시 (있을 경우에만) -->
                    <Border Margin="12,0,0,0" Padding="6,2" Background="#33FF9800" CornerRadius="3">
                        <Border.Style>
                            <Style TargetType="Border">
                                <!-- 기본값: Visible -->
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <!-- GitBranch가 null이거나 빈 문자열이면 Collapsed -->
                                    <DataTrigger Binding="{Binding GitBranch}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding GitBranch}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="SourceBranch"
                                                     Width="14" Height="14"
                                                     Foreground="#FF9800"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding GitBranch}"
                                       FontFamily="Consolas"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#FF9800"
                                       VerticalAlignment="Center"
                                       Margin="4,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- 입력 행 - 일반 모드 -->
            <Grid Grid.Row="1">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsInteractiveMode}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         x:Name="InputTextBox"
                         Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14"
                         FontFamily="Consolas"
                         Padding="10"
                         VerticalContentAlignment="Center"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         Background="{DynamicResource CardBrush}"
                         BorderBrush="{DynamicResource BorderBrush}"
                         CaretBrush="{DynamicResource TextPrimaryBrush}"
                         BorderThickness="1"
                         PreviewKeyDown="InputTextBox_PreviewKeyDown">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding SendMessageCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <Button Grid.Column="1"
                        Command="{Binding SendMessageCommand}"
                        Margin="10,0,0,0"
                        Width="100"
                        Height="56"
                        Padding="10,5"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Content="실행"/>
            </Grid>

            <!-- 인터랙티브 모드 입력 패널 -->
            <Border Grid.Row="1"
                    Background="#1E3A5F"
                    BorderBrush="#2196F3"
                    BorderThickness="2"
                    CornerRadius="6"
                    Padding="10"
                    Visibility="{Binding IsInteractiveMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 상단: 안내 및 종료 버튼 -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="Console"
                                                 Width="20" Height="20"
                                                 Foreground="#64B5F6"
                                                 VerticalAlignment="Center"/>

                        <!-- 프로그램 이름 및 경과 시간 -->
                        <Border Grid.Column="1"
                                Background="#0D47A1"
                                CornerRadius="4"
                                Padding="8,4"
                                Margin="8,0,0,0"
                                VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding AICLIProgramName}"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#4FC3F7"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text=" | "
                                           FontSize="12"
                                           Foreground="#64B5F6"
                                           VerticalAlignment="Center"/>
                                <materialDesign:PackIcon Kind="TimerOutline"
                                                         Width="14" Height="14"
                                                         Foreground="#81D4FA"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding AICLIElapsedTime}"
                                           FontSize="12"
                                           FontFamily="Consolas"
                                           FontWeight="Bold"
                                           Foreground="#4FC3F7"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Grid.Column="2"
                                   Text="출력 영역 클릭 후 키 입력 또는 아래 텍스트 입력"
                                   FontSize="11"
                                   Foreground="#90CAF9"
                                   VerticalAlignment="Center"
                                   Margin="8,0"/>

                        <Button Grid.Column="3"
                                Content="종료"
                                Click="ExitInteractiveMode_Click"
                                Background="#F44336"
                                Foreground="White"
                                Padding="12,4"
                                BorderThickness="0"
                                Height="28"/>
                    </Grid>

                    <!-- 하단: 텍스트 입력 (한글 등) -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 x:Name="InteractiveInputTextBox"
                                 FontSize="14"
                                 FontFamily="Consolas"
                                 Padding="8,6"
                                 Background="#0D47A1"
                                 Foreground="White"
                                 CaretBrush="White"
                                 BorderBrush="#1976D2"
                                 BorderThickness="1"
                                 AcceptsReturn="False"
                                 TextWrapping="Wrap"
                                 MinHeight="36"
                                 MaxHeight="100"
                                 VerticalContentAlignment="Center"
                                 VerticalScrollBarVisibility="Auto"
                                 PreviewKeyDown="InteractiveInputTextBox_PreviewKeyDown"
                                 materialDesign:HintAssist.Hint="Enter=전송, Shift/Ctrl+Enter=줄바꿈, Ctrl+V=이미지"
                                 materialDesign:HintAssist.Foreground="#64B5F6"/>

                        <Button Grid.Column="1"
                                Content="전송"
                                Click="SendInteractiveInput_Click"
                                Background="#2196F3"
                                Foreground="White"
                                Padding="15,8"
                                Margin="8,0,0,0"
                                BorderThickness="0"
                                VerticalAlignment="Stretch"
                                MinHeight="36"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- 상태바 -->
        <materialDesign:ColorZone Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5"
                                   Mode="PrimaryLight"
                                   Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Circle"
                                            Width="12"
                                            Height="12"
                                            VerticalAlignment="Center"
                                            Margin="0,0,5,0">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Foreground" Value="Red"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Foreground" Value="Green"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>
                    <TextBlock Text="{Binding StatusMessage}"
                               VerticalAlignment="Center"
                               FontWeight="Bold"/>
                </StackPanel>

                <!-- 도구 버튼들 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                    <!-- 파일 트리 토글 -->
                    <ToggleButton x:Name="FileTreeToggle"
                                  IsChecked="{Binding IsFileTreeVisible, Mode=TwoWay}"
                                  ToolTip="파일 탐색기 (IDE 스타일)"
                                  Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                  Width="32" Height="32"
                                  Margin="0,0,8,0"
                                  Click="FileTreeToggle_Click">
                        <materialDesign:PackIcon Kind="FileTree" Width="18" Height="18"/>
                    </ToggleButton>

                    <!-- 스니펫 패널 토글 -->
                    <ToggleButton x:Name="SnippetPanelToggle"
                                  IsChecked="{Binding ShowSnippetPanel}"
                                  ToolTip="명령어 스니펫 (자주 쓰는 명령어)"
                                  Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                  Width="32" Height="32"
                                  Margin="0,0,8,0">
                        <materialDesign:PackIcon Kind="CodeBraces" Width="18" Height="18"/>
                    </ToggleButton>

                    <!-- Block UI 토글 -->
                    <ToggleButton IsChecked="{Binding UseBlockUI}"
                                  ToolTip="Block UI 모드 전환 (Warp 스타일)"
                                  Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                  Width="32" Height="32"
                                  Margin="0,0,8,0">
                        <materialDesign:PackIcon Kind="ViewAgendaOutline" Width="18" Height="18"/>
                    </ToggleButton>

                    <Rectangle Width="1" Fill="{DynamicResource BorderBrush}" Margin="4,4"/>

                    <!-- 출력 지우기 -->
                    <Button Command="{Binding ClearOutputCommand}"
                            ToolTip="출력 지우기"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Padding="4">
                        <materialDesign:PackIcon Kind="Eraser" Width="20" Height="20"/>
                    </Button>
                </StackPanel>

                <ProgressBar Grid.Column="3"
                             Width="100"
                             IsIndeterminate="True"
                             Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </materialDesign:ColorZone>
    </Grid>
</UserControl>
